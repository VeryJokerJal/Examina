<Application x:Class="Examina.App" xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sty="using:FluentAvalonia.Styling" xmlns:views="clr-namespace:Examina.Views.Pages" xmlns:vm="clr-namespace:Examina.ViewModels.Pages" RequestedThemeVariant="Default">
    <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

    <Application.Resources>
        <!-- 统计卡片自定义颜色方案 -->

        <!-- 浅色模式颜色 -->
        <Color x:Key="MockExamColorLight">#E3F2FD</Color>
        <Color x:Key="MockExamColorLightHover">#BBDEFB</Color>
        <Color x:Key="MockExamColorLightSelected">#90CAF9</Color>

        <Color x:Key="ComprehensiveTrainingColorLight">#E8F5E8</Color>
        <Color x:Key="ComprehensiveTrainingColorLightHover">#C8E6C9</Color>
        <Color x:Key="ComprehensiveTrainingColorLightSelected">#A5D6A7</Color>

        <Color x:Key="SpecialPracticeColorLight">#FFF3E0</Color>
        <Color x:Key="SpecialPracticeColorLightHover">#FFE0B2</Color>
        <Color x:Key="SpecialPracticeColorLightSelected">#FFCC80</Color>

        <Color x:Key="OnlineExamColorLight">#F3E5F5</Color>
        <Color x:Key="OnlineExamColorLightHover">#E1BEE7</Color>
        <Color x:Key="OnlineExamColorLightSelected">#CE93D8</Color>

        <!-- 深色模式颜色 -->
        <Color x:Key="MockExamColorDark">#1A237E</Color>
        <Color x:Key="MockExamColorDarkHover">#283593</Color>
        <Color x:Key="MockExamColorDarkSelected">#3949AB</Color>

        <Color x:Key="ComprehensiveTrainingColorDark">#1B5E20</Color>
        <Color x:Key="ComprehensiveTrainingColorDarkHover">#2E7D32</Color>
        <Color x:Key="ComprehensiveTrainingColorDarkSelected">#388E3C</Color>

        <Color x:Key="SpecialPracticeColorDark">#E65100</Color>
        <Color x:Key="SpecialPracticeColorDarkHover">#F57C00</Color>
        <Color x:Key="SpecialPracticeColorDarkSelected">#FF9800</Color>

        <Color x:Key="OnlineExamColorDark">#4A148C</Color>
        <Color x:Key="OnlineExamColorDarkHover">#6A1B9A</Color>
        <Color x:Key="OnlineExamColorDarkSelected">#8E24AA</Color>

        <!-- 动态画刷资源 -->
        <SolidColorBrush x:Key="MockExamBackgroundBrush" Color="{DynamicResource MockExamColorLight}" />
        <SolidColorBrush x:Key="MockExamHoverBrush" Color="{DynamicResource MockExamColorLightHover}" />
        <SolidColorBrush x:Key="MockExamSelectedBrush" Color="{DynamicResource MockExamColorLightSelected}" />

        <SolidColorBrush x:Key="ComprehensiveTrainingBackgroundBrush" Color="{DynamicResource ComprehensiveTrainingColorLight}" />
        <SolidColorBrush x:Key="ComprehensiveTrainingHoverBrush" Color="{DynamicResource ComprehensiveTrainingColorLightHover}" />
        <SolidColorBrush x:Key="ComprehensiveTrainingSelectedBrush" Color="{DynamicResource ComprehensiveTrainingColorLightSelected}" />

        <SolidColorBrush x:Key="SpecialPracticeBackgroundBrush" Color="{DynamicResource SpecialPracticeColorLight}" />
        <SolidColorBrush x:Key="SpecialPracticeHoverBrush" Color="{DynamicResource SpecialPracticeColorLightHover}" />
        <SolidColorBrush x:Key="SpecialPracticeSelectedBrush" Color="{DynamicResource SpecialPracticeColorLightSelected}" />

        <SolidColorBrush x:Key="OnlineExamBackgroundBrush" Color="{DynamicResource OnlineExamColorLight}" />
        <SolidColorBrush x:Key="OnlineExamHoverBrush" Color="{DynamicResource OnlineExamColorLightHover}" />
        <SolidColorBrush x:Key="OnlineExamSelectedBrush" Color="{DynamicResource OnlineExamColorLightSelected}" />

        <!-- 文字颜色资源 -->
        <Color x:Key="MockExamTextColor">#1565C0</Color>
        <Color x:Key="MockExamTextColorPrimary">#0D47A1</Color>
        <Color x:Key="MockExamTextColorSecondary">#1976D2</Color>

        <Color x:Key="ComprehensiveTrainingTextColor">#2E7D32</Color>
        <Color x:Key="ComprehensiveTrainingTextColorPrimary">#1B5E20</Color>
        <Color x:Key="ComprehensiveTrainingTextColorSecondary">#388E3C</Color>

        <Color x:Key="SpecialPracticeTextColor">#F57C00</Color>
        <Color x:Key="SpecialPracticeTextColorPrimary">#E65100</Color>
        <Color x:Key="SpecialPracticeTextColorSecondary">#FF9800</Color>

        <Color x:Key="OnlineExamTextColor">#6A1B9A</Color>
        <Color x:Key="OnlineExamTextColorPrimary">#4A148C</Color>
        <Color x:Key="OnlineExamTextColorSecondary">#8E24AA</Color>
    </Application.Resources>

    <Application.Styles>
        <sty:FluentAvaloniaTheme PreferSystemTheme="True" />

        <!--  全局字体设置为雅黑  -->
        <Style Selector="Window">
            <Setter Property="FontFamily" Value="Microsoft YaHei" />
        </Style>

        <!-- 深色主题颜色覆盖 -->
        <Style Selector=":is(Application)[RequestedThemeVariant=Dark]">
            <Style.Resources>
                <Color x:Key="MockExamColorLight">#1A237E</Color>
                <Color x:Key="MockExamColorLightHover">#283593</Color>
                <Color x:Key="MockExamColorLightSelected">#3949AB</Color>

                <Color x:Key="ComprehensiveTrainingColorLight">#1B5E20</Color>
                <Color x:Key="ComprehensiveTrainingColorLightHover">#2E7D32</Color>
                <Color x:Key="ComprehensiveTrainingColorLightSelected">#388E3C</Color>

                <Color x:Key="SpecialPracticeColorLight">#E65100</Color>
                <Color x:Key="SpecialPracticeColorLightHover">#F57C00</Color>
                <Color x:Key="SpecialPracticeColorLightSelected">#FF9800</Color>

                <Color x:Key="OnlineExamColorLight">#4A148C</Color>
                <Color x:Key="OnlineExamColorLightHover">#6A1B9A</Color>
                <Color x:Key="OnlineExamColorLightSelected">#8E24AA</Color>

                <!-- 深色模式下的文字颜色 -->
                <Color x:Key="MockExamTextColor">#90CAF9</Color>
                <Color x:Key="MockExamTextColorPrimary">#BBDEFB</Color>
                <Color x:Key="MockExamTextColorSecondary">#64B5F6</Color>

                <Color x:Key="ComprehensiveTrainingTextColor">#A5D6A7</Color>
                <Color x:Key="ComprehensiveTrainingTextColorPrimary">#C8E6C9</Color>
                <Color x:Key="ComprehensiveTrainingTextColorSecondary">#81C784</Color>

                <Color x:Key="SpecialPracticeTextColor">#FFCC80</Color>
                <Color x:Key="SpecialPracticeTextColorPrimary">#FFE0B2</Color>
                <Color x:Key="SpecialPracticeTextColorSecondary">#FFB74D</Color>

                <Color x:Key="OnlineExamTextColor">#CE93D8</Color>
                <Color x:Key="OnlineExamTextColorPrimary">#E1BEE7</Color>
                <Color x:Key="OnlineExamTextColorSecondary">#BA68C8</Color>
            </Style.Resources>
        </Style>
    </Application.Styles>

    <Application.DataTemplates>
        <!--  页面视图模型到视图的映射  -->
        <DataTemplate DataType="{x:Type vm:OverviewViewModel}">
            <views:OverviewView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ExamViewModel}">
            <views:ExamView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PracticeViewModel}">
            <views:PracticeView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LeaderboardViewModel}">
            <views:LeaderboardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SchoolBindingViewModel}">
            <views:SchoolBindingView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ProfileViewModel}">
            <views:ProfileView />
        </DataTemplate>
    </Application.DataTemplates>
</Application>
