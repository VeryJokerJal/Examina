<Window x:Class="Examina.Views.SpecializedTrainingResultWindow" 
        xmlns="https://github.com/avaloniaui" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:vm="using:Examina.ViewModels" 
        Title="{Binding Title}" 
        Width="900" 
        Height="700" 
        d:DesignHeight="700" 
        d:DesignWidth="900" 
        x:DataType="vm:SpecializedTrainingResultViewModel" 
        Icon="/Assets/icon.ico" 
        WindowStartupLocation="CenterScreen" 
        mc:Ignorable="d">

    <Window.Styles>
        <Style Selector="TextBlock.header">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>
        <Style Selector="TextBlock.subheader">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>
        <Style Selector="TextBlock.content">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="0,2" />
        </Style>
        <Style Selector="Border.section">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Margin" Value="0,0,0,15" />
        </Style>
        <Style Selector="Border.status-card">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="15" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </Window.Styles>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Classes="header" FontSize="24" Text="{Binding Title}" />
            <TextBlock FontSize="16" Foreground="{DynamicResource TextFillColorSecondary}" Text="{Binding TrainingName}" />
        </StackPanel>

        <!-- 主要内容区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 答题概览 -->
                <Border Classes="section">
                    <StackPanel>
                        <TextBlock Classes="header" Text="答题概览" />

                        <!-- 状态卡片 -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- 总题数 -->
                            <Border Grid.Column="0" Classes="status-card">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" Text="{Binding TotalQuestions}" />
                                    <TextBlock HorizontalAlignment="Center" FontSize="10" Text="总题数" />
                                </StackPanel>
                            </Border>

                            <!-- 正确率 -->
                            <Border Grid.Column="1" Classes="status-card">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" Text="{Binding CorrectRate, StringFormat={}{0:F1}%}" />
                                    <TextBlock HorizontalAlignment="Center" FontSize="10" Text="正确率" />
                                </StackPanel>
                            </Border>

                            <!-- 正确题数 -->
                            <Border Grid.Column="2" Classes="status-card">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" Foreground="Green" Text="{Binding CorrectQuestions}" />
                                    <TextBlock HorizontalAlignment="Center" FontSize="10" Text="正确题数" />
                                </StackPanel>
                            </Border>

                            <!-- 错误题数 -->
                            <Border Grid.Column="3" Classes="status-card">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" Foreground="Red" Text="{Binding IncorrectQuestions}" />
                                    <TextBlock HorizontalAlignment="Center" FontSize="10" Text="错误题数" />
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- 其他信息 -->
                        <Grid Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Classes="content" Text="完成时间:" />
                                <TextBlock Classes="content" Text="{Binding CompletionTime, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Classes="content" Text="训练耗时:" />
                                <TextBlock Classes="content" Text="{Binding Duration, StringFormat={}{0:hh\\:mm\\:ss}}" />
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Classes="content" Text="成绩等级:" />
                                <TextBlock Classes="content" FontWeight="SemiBold" Text="{Binding Grade}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 模块详情（每个模块一个Expander） -->
                <ItemsControl ItemsSource="{Binding ModuleResults}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Classes="section">
                                <Expander IsExpanded="False">
                                    <Expander.Header>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!-- 模块基本信息 -->
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Classes="subheader" Text="{Binding ModuleName}" />
                                                <TextBlock Classes="content" IsVisible="{Binding HasError}" Foreground="Red" Text="{Binding ErrorMessage}" />
                                            </StackPanel>

                                            <!-- 正确题数 -->
                                            <TextBlock Grid.Column="1" Margin="8,0" VerticalAlignment="Center" Classes="content" Foreground="Green" Text="{Binding CorrectQuestions, StringFormat={}正确: {0}}" />

                                            <!-- 错误题数 -->
                                            <TextBlock Grid.Column="2" Margin="8,0" VerticalAlignment="Center" Classes="content" Foreground="Red" Text="{Binding IncorrectQuestions, StringFormat={}错误: {0}}" />

                                            <!-- 正确率 -->
                                            <TextBlock Grid.Column="3" Margin="8,0" VerticalAlignment="Center" Classes="content" Text="{Binding CorrectRate, StringFormat={}({0:F1}%)}" />
                                        </Grid>
                                    </Expander.Header>

                                    <Expander.Content>
                                        <StackPanel Margin="0,10,0,0">
                                            <!-- 模块详细信息 -->
                                            <TextBlock Classes="content" IsVisible="{Binding Details, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" Text="{Binding Details}" TextWrapping="Wrap" />

                                            <!-- 该模块的题目列表 -->
                                            <ItemsControl ItemsSource="{Binding ModuleQuestions}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Margin="0,5" Padding="10" Background="{DynamicResource SystemControlBackgroundBaseLowBrush}" CornerRadius="4">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto" />
                                                                    <ColumnDefinition Width="*" />
                                                                </Grid.ColumnDefinitions>

                                                                <!-- 状态图标 -->
                                                                <TextBlock Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center" FontSize="16" Text="{Binding StatusIcon}" />

                                                                <!-- 题目信息 -->
                                                                <StackPanel Grid.Column="1">
                                                                    <TextBlock Classes="content" FontWeight="SemiBold" Text="{Binding QuestionTitle}" />
                                                                    <TextBlock Classes="content" IsVisible="{Binding Details, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" Text="{Binding Details}" TextWrapping="Wrap" />
                                                                    <TextBlock Classes="content" IsVisible="{Binding HasError}" Foreground="Red" Text="{Binding ErrorMessage}" />
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Expander.Content>
                                </Expander>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- 底部按钮区域 -->
        <StackPanel Grid.Row="2" Margin="0,20,0,0" HorizontalAlignment="Right" Orientation="Horizontal" Spacing="12">
            <Button Padding="20,8" Click="CloseButton_Click" Content="确定" />
        </StackPanel>
    </Grid>
</Window>
