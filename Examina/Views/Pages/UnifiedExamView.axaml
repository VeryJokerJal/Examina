<UserControl x:Class="Examina.Views.Pages.UnifiedExamView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:vm="clr-namespace:Examina.ViewModels.Pages"
             d:DesignHeight="800"
             d:DesignWidth="1200"
             x:DataType="vm:UnifiedExamViewModel"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8"
                Margin="0,0,0,16"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="上机统考"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                    <TextBlock Text="查看全省统考和学校统考的试卷信息"
                               FontSize="14"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               Margin="0,4,0,0" />
                </StackPanel>

                <Button Grid.Column="1"
                        Content="刷新全部"
                        Command="{Binding RefreshAllCommand}"
                        Classes="accent"
                        Margin="16,0,0,0">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <ui:SymbolIcon Symbol="Refresh" FontSize="16" />
                            <TextBlock Text="刷新全部" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>
        </Border>

        <!-- 主内容区域 -->
        <ui:TabView Grid.Row="1"
                    TabWidthMode="Equal"
                    CloseButtonOverlayMode="OnPointerOver"
                    CanDragTabs="False"
                    CanReorderTabs="False"
                    AddTabButtonCommand="{x:Null}"
                    IsAddTabButtonVisible="False">

            <!-- 全省统考标签页 -->
            <ui:TabViewItem Header="全省统考">
                <ui:TabViewItem.IconSource>
                    <ui:SymbolIconSource Symbol="Globe" />
                </ui:TabViewItem.IconSource>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- 全省统考工具栏 -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                            CornerRadius="6"
                            Margin="0,0,0,12"
                            Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
                                <TextBlock Text="{Binding ProvincialExamCount, StringFormat='共 {0} 项考试'}"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                <ui:ProgressRing IsVisible="{Binding IsLoadingProvincialExams}"
                                                 Width="16"
                                                 Height="16" />
                            </StackPanel>

                            <Button Grid.Column="1"
                                    Content="刷新"
                                    Command="{Binding RefreshProvincialExamsCommand}"
                                    Classes="subtle">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <ui:SymbolIcon Symbol="Refresh" FontSize="14" />
                                        <TextBlock Text="刷新" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- 全省统考列表 -->
                    <ScrollViewer Grid.Row="1"
                                  HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ProvincialExams}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Spacing="8" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                            CornerRadius="8"
                                            Padding="20,16"
                                            Margin="0,0,0,8">
                                        <Border.Styles>
                                            <Style Selector="Border:pointerover">
                                                <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorSecondaryBrush}" />
                                            </Style>
                                        </Border.Styles>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!-- 考试信息 -->
                                            <StackPanel Grid.Column="0" Spacing="8">
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="16"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                           TextWrapping="Wrap" />
                                                <TextBlock Text="{Binding Description}"
                                                           FontSize="13"
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                           TextWrapping="Wrap"
                                                           IsVisible="{Binding Description, Converter={x:Static ObjectConverters.IsNotNull}}" />
                                                <StackPanel Orientation="Horizontal" Spacing="16">
                                                    <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorTertiaryBrush}">
                                                        <Run Text="时长：" />
                                                        <Run Text="{Binding DurationMinutes}" />
                                                        <Run Text="分钟" />
                                                    </TextBlock>
                                                    <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorTertiaryBrush}">
                                                        <Run Text="总分：" />
                                                        <Run Text="{Binding TotalScore}" />
                                                    </TextBlock>
                                                    <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorTertiaryBrush}">
                                                        <Run Text="及格分：" />
                                                        <Run Text="{Binding PassingScore}" />
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- 考试状态 -->
                                            <Border Grid.Column="1"
                                                    Background="{DynamicResource AccentFillColorDefaultBrush}"
                                                    CornerRadius="12"
                                                    Padding="12,6"
                                                    Margin="16,0">
                                                <TextBlock Text="{Binding Status}"
                                                           FontSize="12"
                                                           FontWeight="Medium"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center" />
                                            </Border>

                                            <!-- 操作按钮 -->
                                            <Button Grid.Column="2"
                                                    Content="查看详情"
                                                    Command="{Binding $parent[UserControl].DataContext.ViewProvincialExamDetailsCommand}"
                                                    CommandParameter="{Binding}"
                                                    Classes="subtle" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </ui:TabViewItem>

            <!-- 学校统考标签页 -->
            <ui:TabViewItem Header="学校统考">
                <ui:TabViewItem.IconSource>
                    <ui:SymbolIconSource Symbol="Home" />
                </ui:TabViewItem.IconSource>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- 学校统考工具栏 -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                            CornerRadius="6"
                            Margin="0,0,0,12"
                            Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
                                <TextBlock Text="{Binding SchoolExamCount, StringFormat='共 {0} 项考试'}"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                <ui:ProgressRing IsVisible="{Binding IsLoadingSchoolExams}"
                                                 Width="16"
                                                 Height="16" />
                            </StackPanel>

                            <Button Grid.Column="1"
                                    Content="刷新"
                                    Command="{Binding RefreshSchoolExamsCommand}"
                                    Classes="subtle">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <ui:SymbolIcon Symbol="Refresh" FontSize="14" />
                                        <TextBlock Text="刷新" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- 学校统考列表 -->
                    <ScrollViewer Grid.Row="1"
                                  HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding SchoolExams}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Spacing="8" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                            CornerRadius="8"
                                            Padding="20,16"
                                            Margin="0,0,0,8">
                                        <Border.Styles>
                                            <Style Selector="Border:pointerover">
                                                <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorSecondaryBrush}" />
                                            </Style>
                                        </Border.Styles>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!-- 考试信息 -->
                                            <StackPanel Grid.Column="0" Spacing="8">
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="16"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                           TextWrapping="Wrap" />
                                                <TextBlock Text="{Binding Description}"
                                                           FontSize="13"
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                           TextWrapping="Wrap"
                                                           IsVisible="{Binding Description, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                                <StackPanel Orientation="Horizontal" Spacing="16">
                                                    <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorTertiaryBrush}">
                                                        <Run Text="时长：" />
                                                        <Run Text="{Binding DurationMinutes}" />
                                                        <Run Text="分钟" />
                                                    </TextBlock>
                                                    <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorTertiaryBrush}">
                                                        <Run Text="总分：" />
                                                        <Run Text="{Binding TotalScore}" />
                                                    </TextBlock>
                                                    <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorTertiaryBrush}">
                                                        <Run Text="及格分：" />
                                                        <Run Text="{Binding PassingScore}" />
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- 考试状态 -->
                                            <Border Grid.Column="1"
                                                    Background="{DynamicResource AccentFillColorDefaultBrush}"
                                                    CornerRadius="12"
                                                    Padding="12,6"
                                                    Margin="16,0">
                                                <TextBlock Text="{Binding Status}"
                                                           FontSize="12"
                                                           FontWeight="Medium"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center" />
                                            </Border>

                                            <!-- 操作按钮 -->
                                            <Button Grid.Column="2"
                                                    Content="查看详情"
                                                    Command="{Binding $parent[UserControl].DataContext.ViewSchoolExamDetailsCommand}"
                                                    CommandParameter="{Binding}"
                                                    Classes="subtle" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </ui:TabViewItem>
        </ui:TabView>

        <!-- 错误消息显示 -->
        <Border Grid.Row="1"
                Background="{DynamicResource SystemFillColorCriticalBrush}"
                CornerRadius="8"
                Padding="16,12"
                Margin="0,16,0,0"
                IsVisible="{Binding ErrorMessage, Converter={x:Static ObjectConverters.IsNotNull}}"
                VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <ui:SymbolIcon Symbol="Important"
                               FontSize="16"
                               Foreground="White" />
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="White"
                           TextWrapping="Wrap" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
