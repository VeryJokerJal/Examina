<UserControl x:Class="Examina.Views.Pages.UnifiedExamView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:vm="clr-namespace:Examina.ViewModels.Pages"
             d:DesignHeight="800"
             d:DesignWidth="1200"
             x:DataType="vm:UnifiedExamViewModel"
             mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20" Spacing="20">

            <!-- 说明文字 -->
            <StackPanel Spacing="8">
                <TextBlock Text="说明："
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                <TextBlock Text="上机考试由后台管理员及老师发起，统考结果展后台可以重新练习"
                           FontSize="14"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           TextWrapping="Wrap" />
            </StackPanel>

            <!-- 全省统考 -->
            <StackPanel Spacing="12">
                <TextBlock Text="全省统考："
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

                <StackPanel Spacing="8">
                    <TextBlock Text="正在进行中："
                               FontSize="14"
                               FontWeight="Medium"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />

                    <!-- 全省统考列表 -->
                    <ItemsControl ItemsSource="{Binding ProvincialExams}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#90EE90"
                                        CornerRadius="8"
                                        Padding="16,12"
                                        Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Spacing="4">
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       Foreground="Black" />
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock FontSize="12" Foreground="#666">
                                                    <Run Text="考试时长：" />
                                                    <Run Text="{Binding DurationMinutes}" />
                                                    <Run Text="分钟" />
                                                </TextBlock>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock Text="联考开始时间："
                                                           FontSize="12"
                                                           Foreground="#666" />
                                                <TextBlock Text="{Binding StartTime, StringFormat='yyyy年MM月dd日HH:mm'}"
                                                           FontSize="12"
                                                           Foreground="#666" />
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Spacing="4">
                                            <Button Content="开始考试"
                                                    Background="White"
                                                    Foreground="Black"
                                                    BorderBrush="#CCC"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Padding="16,8"
                                                    Command="{Binding $parent[UserControl].DataContext.ViewProvincialExamDetailsCommand}"
                                                    CommandParameter="{Binding}" />
                                            <TextBlock Text="联考正在进行中"
                                                       FontSize="11"
                                                       Foreground="#666"
                                                       HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Text="已结束："
                               FontSize="14"
                               FontWeight="Medium"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               Margin="0,16,0,0" />

                    <!-- 已结束的考试示例 -->
                    <Border Background="#90EE90"
                            CornerRadius="8"
                            Padding="16,12"
                            Opacity="0.7">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock Text="第一次全省联考"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="Black" />
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="考试时长：150分钟"
                                               FontSize="12"
                                               Foreground="#666" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="联考开始时间：2025年07月09日15:00"
                                               FontSize="12"
                                               Foreground="#666" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Spacing="4">
                                <Button Content="开始考试"
                                        Background="White"
                                        Foreground="Black"
                                        BorderBrush="#CCC"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="16,8" />
                                <TextBlock Text="联考已结束"
                                           FontSize="11"
                                           Foreground="#666"
                                           HorizontalAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- 学校统考 -->
            <StackPanel Spacing="12">
                <TextBlock Text="学校统考："
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

                <!-- 学校统考列表 -->
                <ItemsControl ItemsSource="{Binding SchoolExams}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#90EE90"
                                    CornerRadius="8"
                                    Padding="16,12"
                                    Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Spacing="4">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="Black" />
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock FontSize="12" Foreground="#666">
                                                <Run Text="考试时长：" />
                                                <Run Text="{Binding DurationMinutes}" />
                                                <Run Text="分钟" />
                                            </TextBlock>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="联考开始时间："
                                                       FontSize="12"
                                                       Foreground="#666" />
                                            <TextBlock Text="{Binding StartTime, StringFormat='yyyy年MM月dd日HH:mm'}"
                                                       FontSize="12"
                                                       Foreground="#666" />
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Spacing="4">
                                        <Button Content="开始考试"
                                                Background="White"
                                                Foreground="Black"
                                                BorderBrush="#CCC"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Padding="16,8"
                                                Command="{Binding $parent[UserControl].DataContext.ViewSchoolExamDetailsCommand}"
                                                CommandParameter="{Binding}" />
                                        <TextBlock Text="联考正在进行中"
                                                   FontSize="11"
                                                   Foreground="#666"
                                                   HorizontalAlignment="Center" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="已结束："
                           FontSize="14"
                           FontWeight="Medium"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           Margin="0,16,0,0" />

                <!-- 已结束的学校考试示例 -->
                <Border Background="#90EE90"
                        CornerRadius="8"
                        Padding="16,12"
                        Opacity="0.7">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="第一次全省联考"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="Black" />
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="考试时长：150分钟"
                                           FontSize="12"
                                           Foreground="#666" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="联考开始时间：2025年07月09日15:00"
                                           FontSize="12"
                                           Foreground="#666" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Spacing="4">
                            <Button Content="开始考试"
                                    Background="White"
                                    Foreground="Black"
                                    BorderBrush="#CCC"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="16,8" />
                            <TextBlock Text="联考已结束"
                                       FontSize="11"
                                       Foreground="#666"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- 错误消息显示 -->
            <Border Background="{DynamicResource SystemFillColorCriticalBrush}"
                    CornerRadius="8"
                    Padding="16,12"
                    Margin="0,16,0,0"
                    IsVisible="{Binding ErrorMessage, Converter={x:Static ObjectConverters.IsNotNull}}">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <ui:SymbolIcon Symbol="Important"
                                   FontSize="16"
                                   Foreground="White" />
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="White"
                               TextWrapping="Wrap" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
