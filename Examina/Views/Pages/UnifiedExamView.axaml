<UserControl x:Class="Examina.Views.Pages.UnifiedExamView" xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:ui="using:FluentAvalonia.UI.Controls" xmlns:vm="clr-namespace:Examina.ViewModels.Pages" d:DesignHeight="800" d:DesignWidth="1200" x:DataType="vm:UnifiedExamViewModel" mc:Ignorable="d">

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" Spacing="20">

            <!--  标题和刷新按钮  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Spacing="8">
                    <TextBlock FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}" Text="说明：" />
                    <TextBlock FontSize="14" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="上机考试由后台管理员及老师发起，统考结果展后台可以重新练习" TextWrapping="Wrap" />
                </StackPanel>

                <Button Grid.Column="1" VerticalAlignment="Top" Classes="accent" Command="{Binding RefreshAllCommand}" Content="刷新全部">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <ui:SymbolIcon FontSize="14" Symbol="Refresh" />
                            <TextBlock Text="刷新" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>

            <!--  全省统考  -->
            <StackPanel Spacing="12">
                <TextBlock FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}" Text="全省统考：" />

                <StackPanel Spacing="8">
                    <TextBlock FontSize="14" FontWeight="Medium" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="正在进行中：" />

                    <!--  全省统考列表  -->
                    <ItemsControl ItemsSource="{Binding ProvincialExams}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,8" Padding="16,12" Background="{DynamicResource LayerFillColorDefaultBrush}" CornerRadius="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Spacing="4">
                                            <TextBlock FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}" Text="{Binding Exam.Name}" />
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                                    <Run Text="考试时长：" />
                                                    <Run Text="{Binding Exam.DurationMinutes}" />
                                                    <Run Text="分钟" />
                                                </TextBlock>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="联考开始时间：" />
                                                <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="{Binding Exam.StartTime, StringFormat='yyyy年MM月dd日HH:mm'}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Spacing="4">
                                            <!--  主要操作按钮（动态显示文本和功能）  -->
                                            <Button Width="110"
                                                    Padding="16,8"
                                                    Background="{DynamicResource AccentFillColorDefaultBrush}"
                                                    BorderBrush="{DynamicResource AccentFillColorDefaultBrush}"
                                                    BorderThickness="1"
                                                    Command="{Binding $parent[UserControl].DataContext.StartExamCommand}"
                                                    CommandParameter="{Binding}"
                                                    Content="{Binding ., Converter={StaticResource ExamPermissionButtonTextConverter}}"
                                                    CornerRadius="4"
                                                    Foreground="White"
                                                    IsEnabled="{Binding ., Converter={StaticResource ExamPermissionButtonEnabledConverter}}"
                                                    IsVisible="{Binding ., Converter={StaticResource ExamPermissionButtonVisibilityConverter}}" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!--  全省统考空状态提示  -->
                    <Border Padding="20" Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="8" IsVisible="{Binding ProvincialExams.Count, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=0}">
                        <StackPanel HorizontalAlignment="Center" Spacing="8">
                            <ui:SymbolIcon FontSize="32" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Symbol="Document" />
                            <TextBlock HorizontalAlignment="Center" FontSize="14" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="暂无全省统考" />
                        </StackPanel>
                    </Border>

                    <!--  全省统考加载状态  -->
                    <Border Padding="20" Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="8" IsVisible="{Binding IsLoadingProvincialExams}">
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="8">
                            <ui:ProgressRing Width="20" Height="20" />
                            <TextBlock VerticalAlignment="Center" FontSize="14" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="正在加载全省统考..." />
                        </StackPanel>
                    </Border>

                    <TextBlock Margin="0,16,0,0" FontSize="14" FontWeight="Medium" Foreground="{DynamicResource TextFillColorSecondaryBrush}" IsVisible="{Binding CompletedProvincialExams.Count, Converter={x:Static ObjectConverters.NotEqual}, ConverterParameter=0}" Text="已结束：" />

                    <!--  已结束的全省统考列表  -->
                    <ItemsControl ItemsSource="{Binding CompletedProvincialExams}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,8" Padding="16,12" Background="{DynamicResource LayerFillColorDefaultBrush}" CornerRadius="8" Opacity="0.7">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Spacing="4">
                                            <TextBlock FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}" Text="{Binding Exam.Name}" />
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                                    <Run Text="考试时长：" />
                                                    <Run Text="{Binding Exam.DurationMinutes}" />
                                                    <Run Text="分钟" />
                                                </TextBlock>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="联考开始时间：" />
                                                <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="{Binding Exam.StartTime, StringFormat='yyyy年MM月dd日HH:mm'}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Spacing="4">
                                            <Button Padding="16,8" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" BorderThickness="1" Command="{Binding $parent[UserControl].DataContext.ViewProvincialExamDetailsCommand}" CommandParameter="{Binding}" Content="{Binding ., Converter={StaticResource ExamButtonTextConverter}}" CornerRadius="4" Foreground="{DynamicResource TextFillColorSecondaryBrush}" IsEnabled="False" />
                                            <TextBlock HorizontalAlignment="Center" FontSize="11" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="{Binding ., Converter={StaticResource ExamStatusConverter}}" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>

            <!--  学校统考  -->
            <StackPanel Spacing="12">
                <TextBlock FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}" Text="学校统考：" />

                <StackPanel Spacing="8">
                    <TextBlock FontSize="14" FontWeight="Medium" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="正在进行中：" />

                    <!--  学校统考列表  -->
                    <ItemsControl ItemsSource="{Binding SchoolExams}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,8" Padding="16,12" Background="{DynamicResource LayerFillColorDefaultBrush}" CornerRadius="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Spacing="4">
                                            <TextBlock FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}" Text="{Binding Exam.Name}" />
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                                    <Run Text="考试时长：" />
                                                    <Run Text="{Binding Exam.DurationMinutes}" />
                                                    <Run Text="分钟" />
                                                </TextBlock>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="联考开始时间：" />
                                                <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="{Binding Exam.StartTime, StringFormat='yyyy年MM月dd日HH:mm'}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Spacing="4">
                                            <!--  主要操作按钮（动态显示文本和功能）  -->
                                            <Button Width="110"
                                                    Padding="16,8"
                                                    Background="{DynamicResource AccentFillColorDefaultBrush}"
                                                    BorderBrush="{DynamicResource AccentFillColorDefaultBrush}"
                                                    BorderThickness="1"
                                                    Command="{Binding $parent[UserControl].DataContext.StartExamCommand}"
                                                    CommandParameter="{Binding}"
                                                    Content="{Binding ., Converter={StaticResource ExamPermissionButtonTextConverter}}"
                                                    CornerRadius="4"
                                                    Foreground="White"
                                                    IsEnabled="{Binding ., Converter={StaticResource ExamPermissionButtonEnabledConverter}}"
                                                    IsVisible="{Binding ., Converter={StaticResource ExamPermissionButtonVisibilityConverter}}" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!--  学校统考空状态提示  -->
                    <Border Padding="20" Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="8" IsVisible="{Binding SchoolExams.Count, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=0}">
                        <StackPanel HorizontalAlignment="Center" Spacing="8">
                            <ui:SymbolIcon FontSize="32" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Symbol="Home" />
                            <TextBlock HorizontalAlignment="Center" FontSize="14" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="暂无学校统考" />
                        </StackPanel>
                    </Border>

                    <!--  学校统考加载状态  -->
                    <Border Padding="20" Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="8" IsVisible="{Binding IsLoadingSchoolExams}">
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="8">
                            <ui:ProgressRing Width="20" Height="20" />
                            <TextBlock VerticalAlignment="Center" FontSize="14" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="正在加载学校统考..." />
                        </StackPanel>
                    </Border>

                    <TextBlock Margin="0,16,0,0" FontSize="14" FontWeight="Medium" Foreground="{DynamicResource TextFillColorSecondaryBrush}" IsVisible="{Binding CompletedSchoolExams.Count, Converter={x:Static ObjectConverters.NotEqual}, ConverterParameter=0}" Text="已结束：" />

                    <!--  已结束的学校统考列表  -->
                    <ItemsControl ItemsSource="{Binding CompletedSchoolExams}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,8" Padding="16,12" Background="{DynamicResource LayerFillColorDefaultBrush}" CornerRadius="8" Opacity="0.7">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Spacing="4">
                                            <TextBlock FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}" Text="{Binding Exam.Name}" />
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                                    <Run Text="考试时长：" />
                                                    <Run Text="{Binding Exam.DurationMinutes}" />
                                                    <Run Text="分钟" />
                                                </TextBlock>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="联考开始时间：" />
                                                <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="{Binding Exam.StartTime, StringFormat='yyyy年MM月dd日HH:mm'}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Spacing="4">
                                            <Button Padding="16,8" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" BorderThickness="1" Command="{Binding $parent[UserControl].DataContext.ViewSchoolExamDetailsCommand}" CommandParameter="{Binding}" Content="{Binding ., Converter={StaticResource ExamButtonTextConverter}}" CornerRadius="4" Foreground="{DynamicResource TextFillColorSecondaryBrush}" IsEnabled="False" />
                                            <TextBlock HorizontalAlignment="Center" FontSize="11" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="{Binding ., Converter={StaticResource ExamStatusConverter}}" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>

            <!--  错误消息显示  -->
            <Border Margin="0,16,0,0" Padding="16,12" Background="{DynamicResource SystemFillColorCriticalBrush}" CornerRadius="8" IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <ui:SymbolIcon FontSize="16" Foreground="White" Symbol="Important" />
                    <TextBlock Foreground="White" Text="{Binding ErrorMessage}" TextWrapping="Wrap" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
