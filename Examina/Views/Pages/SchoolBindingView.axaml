<UserControl x:Class="Examina.Views.Pages.SchoolBindingView" xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:vm="clr-namespace:Examina.ViewModels.Pages" d:DesignHeight="600" d:DesignWidth="800" x:DataType="vm:SchoolBindingViewModel" mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="24" Spacing="24">

            <!--  页面标题  -->
            <TextBlock FontFamily="Microsoft YaHei" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" Text="{Binding PageTitle, FallbackValue='加入学校'}" />

            <!--  加入学校表单  -->
            <Border Padding="20" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" BorderBrush="{DynamicResource SystemControlForegroundAccentBrush}" BorderThickness="1" CornerRadius="8" IsVisible="{Binding !IsSchoolBound}">
                <StackPanel Spacing="16">
                    <TextBlock FontFamily="Microsoft YaHei" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" Text="加入学校" />

                    <StackPanel Spacing="8">
                        <TextBlock FontFamily="Microsoft YaHei" FontSize="14" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Text="邀请码" />
                        <TextBox FontFamily="Microsoft YaHei" MaxLength="7" Text="{Binding InvitationCode, FallbackValue=''}" Watermark="请输入7位邀请码" />
                        <TextBlock FontFamily="Microsoft YaHei" FontSize="12" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Text="请向老师获取班级邀请码" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Padding="16,8" Command="{Binding JoinOrganizationCommand}" Content="加入学校" FontFamily="Microsoft YaHei" IsEnabled="{Binding !IsProcessing}" />
                        <Border Width="24" Height="24" IsVisible="{Binding IsProcessing}">
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" Text="⟳" />
                        </Border>
                    </StackPanel>

                    <!--  状态消息  -->
                    <TextBlock FontFamily="Microsoft YaHei" FontSize="14" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" Text="{Binding StatusMessage, FallbackValue=''}" TextWrapping="Wrap" />
                </StackPanel>
            </Border>

            <!--  已加入学校状态  -->
            <Border Padding="20" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" BorderBrush="{DynamicResource SystemControlForegroundAccentBrush}" BorderThickness="1" CornerRadius="8" IsVisible="{Binding IsSchoolBound}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock FontSize="24" Foreground="{DynamicResource SystemControlForegroundAccentBrush}" Text="✓" />
                        <TextBlock FontFamily="Microsoft YaHei" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" Text="已加入学校" />
                    </StackPanel>

                    <StackPanel Spacing="8">
                        <TextBlock FontFamily="Microsoft YaHei" FontSize="14" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Text="当前学校" />
                        <TextBlock FontFamily="Microsoft YaHei" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" Text="{Binding CurrentSchool, FallbackValue='学校名称'}" />
                    </StackPanel>

                    <TextBlock FontFamily="Microsoft YaHei" FontSize="14" Foreground="{DynamicResource SystemControlForegroundAccentBrush}" Text="您已成功加入学校，现在可以使用所有功能！" />
                </StackPanel>
            </Border>



        </StackPanel>
    </ScrollViewer>
</UserControl>
