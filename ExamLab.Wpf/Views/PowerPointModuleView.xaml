<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:Class="ExamLab.Views.PowerPointModuleView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:converters="clr-namespace:ExamLab.Converters" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:ExamLab.Views" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">

    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--  模块标题  -->
        <Border Grid.Row="0" Padding="16,12" Background="{ThemeResource CardBackgroundFillColorDefault}">
            <StackPanel Orientation="Horizontal" Spacing="16">
                <TextBlock FontSize="18" FontWeight="SemiBold" Foreground="White" Text="{Binding CurrentContentViewModel.Title}" />
                <Button Command="{Binding AddQuestionCommand}" Content="添加题目" Style="{ThemeResource AccentButtonStyle}" />
            </StackPanel>
        </Border>

        <ScrollViewer x:Name="LayoutRoot" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--  模块描述设置区域  -->
                <Border Grid.Row="0" Margin="10" Padding="20" Background="{ThemeResource CardBackgroundFillColorDefault}" BorderBrush="{ThemeResource CardStrokeColorDefaultSolidBrush}" BorderThickness="1" CornerRadius="8">
                    <StackPanel Spacing="16">
                        <TextBlock FontSize="18" FontWeight="SemiBold" Text="模块设置" />
                        <TextBlock FontSize="13" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="配置当前模块的基本信息" />

                        <StackPanel Spacing="12">
                            <TextBlock FontSize="14" FontWeight="Medium" Text="模块名称" />
                            <TextBox PlaceholderText="请输入模块名称" Text="{Binding SelectedModule.Name, Mode=TwoWay}" />
                        </StackPanel>

                        <StackPanel Spacing="12">
                            <TextBlock FontSize="14" FontWeight="Medium" Text="模块描述" />
                            <TextBox Height="100" AcceptsReturn="True" PlaceholderText="请输入模块描述" Text="{Binding SelectedModule.Description, Mode=TwoWay}" TextWrapping="Wrap" />
                        </StackPanel>

                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Spacing="12">
                            <Button Command="{Binding ResetModuleDescriptionCommand}" Content="重置" Style="{ThemeResource DefaultButtonStyle}" />
                            <Button Command="{Binding SaveModuleDescriptionCommand}" Content="保存" Style="{ThemeResource AccentButtonStyle}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--  主内容区域  -->
                <Grid Grid.Row="1" Padding="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  左侧题目列表  -->
                    <Border Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefault}" BorderBrush="{ThemeResource CardStrokeColorDefaultSolidBrush}" BorderThickness="1" CornerRadius="8 0 0 8">
                        <Grid Padding="10" RowSpacing="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" FontSize="16" FontWeight="SemiBold" Text="题目列表" />

                            <ListView Grid.Row="1" ItemsSource="{Binding CurrentContentViewModel.Module.Questions}" SelectedItem="{Binding CurrentContentViewModel.SelectedQuestion, Mode=TwoWay}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="10">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" FontWeight="SemiBold" Text="{Binding Title}" />
                                            <TextBlock Grid.Row="1" FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" MaxLines="2" Text="{Binding Content}" TextWrapping="Wrap" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefault}" BorderBrush="{ThemeResource CardStrokeColorDefaultSolidBrush}" BorderThickness="0,1,1,1" CornerRadius="0 8 8 0" Visibility="{Binding CurrentContentViewModel.SelectedQuestion, Converter={StaticResource NullToVisibilityConverter}}">
                        <!--  右侧内容区域  -->
                        <Grid Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  题目详情  -->
                            <StackPanel Grid.Row="0" Spacing="8">
                                <TextBlock FontSize="16" FontWeight="SemiBold" Text="题目详情" />
                                <TextBox Header="题目标题" Text="{Binding CurrentContentViewModel.SelectedQuestion.Title, Mode=TwoWay}" />
                                <TextBox Height="100" AcceptsReturn="True" Header="题目内容" Text="{Binding CurrentContentViewModel.SelectedQuestion.Content, Mode=TwoWay}" TextWrapping="Wrap" />
                                <NumberBox Header="题目分值" Value="{Binding CurrentContentViewModel.SelectedQuestion.Score, Mode=TwoWay}" />
                            </StackPanel>

                            <!--  知识点选择  -->
                            <ScrollViewer Grid.Row="1" Margin="0,16,0,0">
                                <StackPanel Spacing="16">
                                    <TextBlock FontSize="16" FontWeight="SemiBold" Text="PPT知识点" />

                                    <!--  幻灯片操作类  -->
                                    <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Header="幻灯片操作" IsExpanded="True">
                                        <StackPanel Spacing="8">
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetSlideLayout" Content="设置幻灯片版式" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="DeleteSlide" Content="删除幻灯片" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="InsertSlide" Content="插入幻灯片" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetSlideFont" Content="设置幻灯片字体" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SlideTransitionEffect" Content="幻灯片切换效果" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SlideTransitionMode" Content="幻灯片切换方式" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SlideshowMode" Content="幻灯片放映方式" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SlideshowOptions" Content="幻灯片放映选项" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="InsertHyperlink" Content="插入超链接" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SlideTransitionSound" Content="切换播放声音" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SlideNumber" Content="幻灯片编号" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="FooterText" Content="页脚文字" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="InsertImage" Content="插入图片" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="InsertTable" Content="插入表格" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="InsertSmartArt" Content="插入SmartArt图形" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="InsertNote" Content="插入备注" />
                                        </StackPanel>
                                    </Expander>

                                    <!--  文字与字体设置类  -->
                                    <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Header="文字与字体设置">
                                        <StackPanel Spacing="8">
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="InsertTextContent" Content="插入文本内容" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetTextFontSize" Content="设置文本字号" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetTextColor" Content="设置文本颜色" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetTextStyle" Content="设置文本字形" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetElementPosition" Content="设置元素位置" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetElementSize" Content="设置元素尺寸" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetWordArtStyle" Content="艺术字字样" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetWordArtEffect" Content="艺术字文本效果" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetSmartArtColor" Content="SmartArt颜色" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetAnimationDirection" Content="动画方向" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetAnimationStyle" Content="动画样式" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetAnimationDuration" Content="动画持续时间" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetTextAlignment" Content="文本对齐方式" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetAnimationOrder" Content="动画顺序" />
                                        </StackPanel>
                                    </Expander>

                                    <!--  背景样式与设计类  -->
                                    <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Header="背景样式与设计">
                                        <StackPanel Spacing="8">
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="ApplyTheme" Content="应用主题" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetSlideBackground" Content="设置幻灯片背景" />
                                        </StackPanel>
                                    </Expander>

                                    <!--  其他设置类  -->
                                    <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Header="其他设置">
                                        <StackPanel Spacing="8">
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetTableContent" Content="设置表格内容" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetTableStyle" Content="设置表格样式" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetSmartArtStyle" Content="SmartArt样式" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetSmartArtContent" Content="SmartArt内容" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetAnimationTiming" Content="动画计时设置" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetParagraphSpacing" Content="段落行距" />
                                            <Button HorizontalAlignment="Stretch" Command="{Binding CurrentContentViewModel.AddOperationPointByTypeCommand}" CommandParameter="SetBackgroundStyle" Content="设置背景样式" />
                                        </StackPanel>
                                    </Expander>
                                </StackPanel>
                            </ScrollViewer>

                            <!--  操作点列表标题  -->
                            <TextBlock Grid.Row="2" Margin="0,16,0,8" FontSize="16" FontWeight="SemiBold" Text="操作点配置" />

                            <Grid Grid.Row="3">
                                <!--  操作点列表  -->
                                <ListView ItemsSource="{Binding CurrentContentViewModel.SelectedQuestion.OperationPoints}" SelectedItem="{Binding CurrentContentViewModel.SelectedOperationPoint, Mode=TwoWay}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Padding="10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock FontWeight="SemiBold" Text="{Binding Name}" />
                                                    <TextBlock FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="{Binding Description}" />
                                                </StackPanel>
                                                <Button Grid.Column="1" Margin="0,0,8,0" Command="{Binding DataContext.CurrentContentViewModel.EditOperationPointCommand, ElementName=LayoutRoot}" CommandParameter="{Binding}" Content="编辑" ToolTipService.ToolTip="编辑操作点" />
                                                <Button Grid.Column="2" Command="{Binding DataContext.CurrentContentViewModel.DeleteOperationPointCommand, ElementName=LayoutRoot}" CommandParameter="{Binding}" Content="删除" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                                <!--  空操作点列表提示  -->
                                <StackPanel Padding="10" Background="{ThemeResource CardBackgroundFillColorDefault}" BorderBrush="{ThemeResource CardStrokeColorDefaultSolidBrush}" BorderThickness="1" CornerRadius="5" Spacing="12" Visibility="{Binding CurrentContentViewModel.SelectedQuestion.OperationPoints.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Zero}">
                                    <TextBlock HorizontalAlignment="Center" FontSize="16" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="暂无操作点" />
                                    <TextBlock HorizontalAlignment="Center" FontSize="14" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="请在上方选择操作类型来添加操作点" />
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>

                    <!--  无选中题目时的提示  -->
                    <Border Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefault}" BorderBrush="{ThemeResource CardStrokeColorDefaultSolidBrush}" BorderThickness="0,1,1,1" CornerRadius="0 8 8 0" Visibility="{Binding CurrentContentViewModel.SelectedQuestion, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                            <TextBlock HorizontalAlignment="Center" FontSize="18" Text="请选择一个题目" />
                            <TextBlock HorizontalAlignment="Center" FontSize="14" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="在左侧选择题目来配置PowerPoint操作点" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
