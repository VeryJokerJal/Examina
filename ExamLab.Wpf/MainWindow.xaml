<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="ExamLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:ExamLab.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ExamLab"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="试卷制作系统"
        Height="800"
        Width="1200"
        mc:Ignorable="d">

    <Grid x:Name="mainGrid">
        <Grid.Resources>
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
            <converters:NullToBooleanConverter x:Key="NullToBooleanConverter" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  顶部工具栏  -->
        <Border Grid.Row="0" Padding="16,8" Background="LightGray">
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" FontSize="14" Text="试卷制作" Margin="0,0,16,0" />
                <TextBlock VerticalAlignment="Center" FontSize="16" Foreground="Orange" Text="●" ToolTip="有未保存的更改" Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BoolToVisibilityConverter}}" Margin="0,0,16,0" />
                <Button Command="{Binding CreateExamCommand}" Content="新建试卷" Margin="0,0,8,0" />
                <Button Command="{Binding SaveExamCommand}" Content="保存" IsEnabled="{Binding SelectedExam, Converter={StaticResource NullToBooleanConverter}}" Margin="0,0,8,0" />
                <Button Command="{Binding OpenProjectCommand}" Content="打开项目" Margin="0,0,8,0" />
                <Button Command="{Binding ImportExamCommand}" Content="导入" Margin="0,0,8,0" />
                <Button Command="{Binding ExportExamCommand}" CommandParameter="{Binding SelectedExam}" Content="导出" IsEnabled="{Binding SelectedExam, Converter={StaticResource NullToBooleanConverter}}" />
            </StackPanel>
        </Border>

        <!--  主内容区域  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  左侧导航面板  -->
            <Border Grid.Column="0" Background="WhiteSmoke" BorderBrush="LightGray" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="310" />
                    </Grid.RowDefinitions>

                    <!--  试卷列表标题  -->
                    <TextBlock Grid.Row="0" Margin="16,16,16,8" FontSize="16" FontWeight="SemiBold" Foreground="Gray" Text="试卷" />

                    <!--  试卷列表  -->
                    <ListView Grid.Row="1" Margin="8,0" ItemsSource="{Binding Exams}" SelectedItem="{Binding SelectedExam, Mode=TwoWay}" Visibility="{Binding ExamCount, Converter={StaticResource CountToVisibilityConverter}}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="8,4" Background="Transparent">
                                    <Grid.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="克隆试卷" Tag="{Binding}" Click="CloneExam_Click" />
                                            <MenuItem Header="删除试卷" Tag="{Binding}" Click="DeleteExam_Click" />
                                        </ContextMenu>
                                    </Grid.ContextMenu>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" FontWeight="SemiBold" Text="{Binding Name}" />
                                    <TextBlock Grid.Row="1" FontSize="12" Foreground="Gray" Text="{Binding Description}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!--  试卷列表空状态提示  -->
                    <Border Grid.Row="1" Margin="10" Padding="16" Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="8" Visibility="{Binding ExamCount, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Zero}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Center" FontSize="32" Foreground="Gray" Text="📄" Margin="0,0,0,12" />
                            <TextBlock HorizontalAlignment="Center" FontSize="16" FontWeight="SemiBold" Foreground="Gray" Text="暂无试卷" Margin="0,0,0,12" />
                            <TextBlock HorizontalAlignment="Center" FontSize="14" Foreground="Gray" Text="点击上方按钮创建您的第一个试卷" TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>

                    <!--  模块列表标题  -->
                    <TextBlock Grid.Row="2" Margin="16,16,16,8" FontSize="16" FontWeight="SemiBold" Foreground="Gray" Text="模块" Visibility="{Binding ExamCount, Converter={StaticResource CountToVisibilityConverter}}" />

                    <!--  模块列表  -->
                    <ListView Grid.Row="3" Margin="8,0" ItemsSource="{Binding SelectedExam.Modules}" SelectedItem="{Binding SelectedModule, Mode=TwoWay}" Visibility="{Binding ExamCount, Converter={StaticResource CountToVisibilityConverter}}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--  模块名称  -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold" Text="{Binding Name}" />

                                    <!--  题目数量 Badge  -->
                                    <Border Grid.Row="0" Grid.Column="1" Background="LightBlue" CornerRadius="10" Padding="6,2">
                                        <TextBlock Text="{Binding QuestionCount}" FontSize="10" Foreground="White" HorizontalAlignment="Center" />
                                    </Border>

                                    <!--  统计信息  -->
                                    <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0,4,0,0" Orientation="Horizontal">
                                        <TextBlock FontSize="12" Foreground="Gray" Margin="0,0,12,0">
                                            <Run Text="总分: " />
                                            <Run Text="{Binding TotalScore}" />
                                        </TextBlock>
                                        <TextBlock FontSize="12" Foreground="Gray">
                                            <Run Text="操作点: " />
                                            <Run Text="{Binding OperationPointCount}" />
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!--  模块列表空状态提示  -->
                    <Border Grid.Row="2" Grid.RowSpan="2" Margin="10,0,10,10" Padding="16" Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="8" Visibility="{Binding ExamCount, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Zero}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Center" FontSize="32" Foreground="Gray" Text="📋" Margin="0,0,0,12" />
                            <TextBlock HorizontalAlignment="Center" FontSize="16" FontWeight="SemiBold" Foreground="Gray" Text="暂无模块" Margin="0,0,0,12" />
                            <TextBlock HorizontalAlignment="Center" FontSize="14" Foreground="Gray" Text="请先创建试卷以查看模块列表" TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!--  右侧内容区域  -->
            <Grid Grid.Column="1">
                <!--  默认显示  -->
                <Border Margin="16" Visibility="{Binding SelectedModule, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock HorizontalAlignment="Center" FontSize="24" FontWeight="SemiBold" Text="欢迎使用试卷制作系统" Margin="0,0,0,16" />
                        <TextBlock HorizontalAlignment="Center" FontSize="16" Foreground="Gray" Text="请选择左侧的试卷和模块开始配置" />
                    </StackPanel>
                </Border>

                <!--  模块内容显示  -->
                <ContentPresenter Content="{Binding CurrentContentView}" Visibility="{Binding SelectedModule, Converter={StaticResource NullToVisibilityConverter}}" />
            </Grid>
        </Grid>
    </Grid>
</Window>
