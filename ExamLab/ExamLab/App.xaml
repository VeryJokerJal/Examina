<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="ExamLab.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ExamLab"
    xmlns:vm="using:ExamLab.ViewModels"
    xmlns:views="using:ExamLab.Views"
    xmlns:converters="using:ExamLab.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="Styles/AppStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- 转换器资源 -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <converters:NullToBooleanConverter x:Key="NullToBooleanConverter" />
            <converters:ParameterTypeToVisibilityConverter x:Key="ParameterTypeToVisibilityConverter" />
            <converters:StringFormatConverter x:Key="StringFormatConverter" />
            <converters:ScoreFormatConverter x:Key="ScoreFormatConverter" />
            <converters:OrderFormatConverter x:Key="OrderFormatConverter" />
            <converters:QuestionCountFormatConverter x:Key="QuestionCountFormatConverter" />
            <converters:OperationPointCountFormatConverter x:Key="OperationPointCountFormatConverter" />
            <converters:StringToIntConverter x:Key="StringToIntConverter" />
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converters:ParameterCountFormatConverter x:Key="ParameterCountFormatConverter" />
            <converters:ParameterCountDetailFormatConverter x:Key="ParameterCountDetailFormatConverter" />
            <converters:ScoreDisplayConverter x:Key="ScoreDisplayConverter" />
            <converters:ModuleTotalScoreConverter x:Key="ModuleTotalScoreConverter" />
            <converters:ModuleOperationPointCountConverter x:Key="ModuleOperationPointCountConverter" />
            <converters:ModuleQuestionCountConverter x:Key="ModuleQuestionCountConverter" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
