<ContentDialog x:Class="ExamLab.Views.OperationPointEditDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               Title="编辑操作点"
               PrimaryButtonText="保存"
               CloseButtonText="取消">

    <StackPanel Width="600" Height="500" Margin="24">
        <TextBlock Text="编辑操作点参数" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16" />

        <TextBlock Text="操作点名称:" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox x:Name="NameTextBox" IsReadOnly="True" Margin="0,0,0,16" />

        <TextBlock Text="操作点描述:" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox x:Name="DescriptionTextBox" IsReadOnly="True" TextWrapping="Wrap" Height="60" Margin="0,0,0,16" />

        <TextBlock Text="参数配置:" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8" />
        <ScrollViewer Height="250" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ParametersPanel" />
        </ScrollViewer>

        <TextBlock x:Name="ErrorTextBlock" Foreground="Red" TextWrapping="Wrap" Visibility="Collapsed" Margin="0,16,0,0" />
    </StackPanel>
</ContentDialog>
