<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 卡片样式 -->
    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="BorderBrush" Value="{ThemeResource SystemControlForegroundBaseLowBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- 标题文本样式 -->
    <Style x:Key="TitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- 副标题文本样式 -->
    <Style x:Key="SubtitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>

    <!-- 描述文本样式 -->
    <Style x:Key="DescriptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <!-- 主要按钮样式 -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="Margin" Value="4"/>
    </Style>

    <!-- 次要按钮样式 -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="Margin" Value="4"/>
    </Style>

    <!-- 操作按钮样式 -->
    <Style x:Key="ActionButtonStyle" TargetType="Button">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="0,2"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>

    <!-- 列表项样式 -->
    <Style x:Key="ListItemBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="BorderBrush" Value="{ThemeResource SystemControlForegroundBaseLowBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- 输入框样式 -->
    <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="MinHeight" Value="32"/>
    </Style>

    <!-- 数字输入框样式 -->
    <Style x:Key="FormNumberBoxStyle" TargetType="NumberBox">
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="MinHeight" Value="32"/>
    </Style>

    <!-- 下拉框样式 -->
    <Style x:Key="FormComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <!-- 分组标题样式 -->
    <Style x:Key="GroupHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,16,0,8"/>
        <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
    </Style>

    <!-- 错误文本样式 -->
    <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{ThemeResource SystemErrorTextColor}"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>

    <!-- 成功文本样式 -->
    <Style x:Key="SuccessTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="Green"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>

    <!-- 警告文本样式 -->
    <Style x:Key="WarningTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="Orange"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>

    <!-- 模块标题栏样式 -->
    <Style x:Key="ModuleHeaderStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundAccentBrush}"/>
        <Setter Property="Padding" Value="16,12"/>
    </Style>

    <!-- 导航面板样式 -->
    <Style x:Key="NavigationPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource SystemControlForegroundBaseLowBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
    </Style>

    <!-- 内容面板样式 -->
    <Style x:Key="ContentPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="8"/>
    </Style>

    <!-- 参数配置面板样式 -->
    <Style x:Key="ParameterPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
        <Setter Property="BorderBrush" Value="{ThemeResource SystemControlForegroundBaseLowBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- 工具提示样式 -->
    <Style x:Key="InfoTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>

    <!-- 展开器样式 -->
    <Style x:Key="CategoryExpanderStyle" TargetType="Expander">
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    </Style>

    <!-- 列表视图样式 -->
    <Style x:Key="ModuleListViewStyle" TargetType="ListView">
        <Setter Property="Margin" Value="8,0"/>
        <Setter Property="SelectionMode" Value="Single"/>
    </Style>

    <!-- 空状态提示样式 -->
    <Style x:Key="EmptyStateStyle" TargetType="StackPanel">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Spacing" Value="16"/>
    </Style>

</ResourceDictionary>
