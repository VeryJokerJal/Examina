<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog x:Class="ExamLab.Views.ParameterEditDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:converters="using:ExamLab.Converters"
               xmlns:models="using:ExamLab.Models"
               Title="编辑参数"
               PrimaryButtonText="保存"
               SecondaryButtonText="取消"
               DefaultButton="Primary"
               Style="{StaticResource DefaultContentDialogStyle}">

    <ContentDialog.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </ContentDialog.Resources>

    <ScrollViewer MaxHeight="500" VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="16" Margin="0,0,0,16">
            <!-- 基本信息 -->
            <Border Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultSolidBrush}" 
                    BorderThickness="1" CornerRadius="8">
                <StackPanel Spacing="12">
                    <TextBlock Text="基本信息" FontSize="16" FontWeight="SemiBold" />
                    
                    <TextBox Header="参数名称" 
                             Text="{Binding Parameter.Name, Mode=TwoWay}" 
                             PlaceholderText="参数的内部名称（建议使用英文和下划线）" />
                    
                    <TextBox Header="显示名称" 
                             Text="{Binding Parameter.DisplayName, Mode=TwoWay}" 
                             PlaceholderText="参数的显示名称" />
                    
                    <TextBox Header="参数描述" 
                             Text="{Binding Parameter.Description, Mode=TwoWay}" 
                             PlaceholderText="参数的详细描述"
                             AcceptsReturn="True" 
                             Height="80" />
                    
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <NumberBox Header="排序" 
                                   Value="{Binding Parameter.Order, Mode=TwoWay}" 
                                   Minimum="1" 
                                   Width="120" />
                        
                        <ToggleSwitch Header="必填参数" 
                                      IsOn="{Binding Parameter.IsRequired, Mode=TwoWay}" />
                        
                        <ToggleSwitch Header="启用" 
                                      IsOn="{Binding Parameter.IsEnabled, Mode=TwoWay}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 参数类型配置 -->
            <Border Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultSolidBrush}" 
                    BorderThickness="1" CornerRadius="8">
                <StackPanel Spacing="12">
                    <TextBlock Text="参数类型配置" FontSize="16" FontWeight="SemiBold" />
                    
                    <ComboBox Header="参数类型" 
                              SelectedItem="{Binding Parameter.Type, Mode=TwoWay}"
                              HorizontalAlignment="Stretch">
                        <models:ParameterType>Text</models:ParameterType>
                        <models:ParameterType>Number</models:ParameterType>
                        <models:ParameterType>Boolean</models:ParameterType>
                        <models:ParameterType>Enum</models:ParameterType>
                        <models:ParameterType>Color</models:ParameterType>
                        <models:ParameterType>File</models:ParameterType>
                        <models:ParameterType>MultipleChoice</models:ParameterType>
                    </ComboBox>
                    
                    <TextBox Header="默认值" 
                             Text="{Binding Parameter.DefaultValue, Mode=TwoWay}" 
                             PlaceholderText="参数的默认值" />
                    
                    <TextBox Header="当前值" 
                             Text="{Binding Parameter.Value, Mode=TwoWay}" 
                             PlaceholderText="参数的当前值" />
                </StackPanel>
            </Border>

            <!-- 数字类型配置 -->
            <Border Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultSolidBrush}" 
                    BorderThickness="1" CornerRadius="8"
                    Visibility="{Binding IsNumberType, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Spacing="12">
                    <TextBlock Text="数字类型配置" FontSize="16" FontWeight="SemiBold" />
                    
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <NumberBox Header="最小值" 
                                   Value="{Binding Parameter.MinValue, Mode=TwoWay}" 
                                   Width="150" />
                        
                        <NumberBox Header="最大值" 
                                   Value="{Binding Parameter.MaxValue, Mode=TwoWay}" 
                                   Width="150" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 枚举/多选类型配置 -->
            <Border Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultSolidBrush}" 
                    BorderThickness="1" CornerRadius="8"
                    Visibility="{Binding IsEnumType, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Spacing="12">
                    <TextBlock Text="选项配置" FontSize="16" FontWeight="SemiBold" />
                    
                    <TextBox Header="选项列表" 
                             Text="{Binding Parameter.EnumOptions, Mode=TwoWay}" 
                             PlaceholderText="用逗号分隔的选项列表，例如：选项1,选项2,选项3"
                             AcceptsReturn="True" 
                             Height="80" />
                    
                    <TextBlock Text="预览选项：" FontSize="12" FontWeight="Medium" />
                    <ItemsRepeater ItemsSource="{Binding Parameter.EnumOptionsList}">
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8,4" Margin="2" 
                                        Background="{ThemeResource LayerFillColorDefaultBrush}" 
                                        CornerRadius="4">
                                    <TextBlock Text="{Binding}" FontSize="12" />
                                </Border>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                        <ItemsRepeater.Layout>
                            <StackLayout Orientation="Horizontal" Spacing="4" />
                        </ItemsRepeater.Layout>
                    </ItemsRepeater>
                </StackPanel>
            </Border>

            <!-- 验证规则配置 -->
            <Border Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultSolidBrush}" 
                    BorderThickness="1" CornerRadius="8">
                <StackPanel Spacing="12">
                    <TextBlock Text="验证规则" FontSize="16" FontWeight="SemiBold" />
                    
                    <TextBox Header="验证规则（正则表达式）" 
                             Text="{Binding Parameter.ValidationRule, Mode=TwoWay}" 
                             PlaceholderText="可选，用于验证参数值的正则表达式" />
                    
                    <TextBox Header="验证错误消息" 
                             Text="{Binding Parameter.ValidationErrorMessage, Mode=TwoWay}" 
                             PlaceholderText="验证失败时显示的错误消息" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
