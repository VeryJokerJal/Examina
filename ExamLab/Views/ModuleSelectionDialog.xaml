<ContentDialog x:Class="ExamLab.Views.ModuleSelectionDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="选择专项模块类型" DefaultButton="Primary" PrimaryButtonText="确定" SecondaryButtonText="取消">

    <Grid Width="400" Height="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,16" Spacing="8">
            <TextBlock FontSize="14" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="专项试卷只包含一个模块，请选择您要创建的模块类型。" TextWrapping="Wrap" />
        </StackPanel>

        <ListView x:Name="ModuleTypeListView" Grid.Row="1" SelectionMode="Single">
            <ListView.Items>
                <ListViewItem Tag="Windows">
                    <StackPanel Padding="10" Orientation="Horizontal" Spacing="12">
                        <SymbolIcon Symbol="Folder" />
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" Text="Windows操作" />
                            <TextBlock FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="Windows文件和文件夹操作模块" />
                        </StackPanel>
                    </StackPanel>
                </ListViewItem>
                <ListViewItem Tag="CSharp">
                    <StackPanel Padding="10" Orientation="Horizontal" Spacing="12">
                        <SymbolIcon Symbol="Library" />
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" Text="C#编程" />
                            <TextBlock FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="C#程序设计模块" />
                        </StackPanel>
                    </StackPanel>
                </ListViewItem>
                <ListViewItem Tag="PowerPoint">
                    <StackPanel Padding="10" Orientation="Horizontal" Spacing="12">
                        <SymbolIcon Symbol="SlideShow" />
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" Text="PowerPoint操作" />
                            <TextBlock FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="PowerPoint幻灯片操作模块" />
                        </StackPanel>
                    </StackPanel>
                </ListViewItem>
                <ListViewItem Tag="Excel">
                    <StackPanel Padding="10" Orientation="Horizontal" Spacing="12">
                        <SymbolIcon Symbol="Calculator" />
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" Text="Excel操作" />
                            <TextBlock FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="Excel电子表格操作模块" />
                        </StackPanel>
                    </StackPanel>
                </ListViewItem>
                <ListViewItem Tag="Word">
                    <StackPanel Padding="10" Orientation="Horizontal" Spacing="12">
                        <SymbolIcon Symbol="Document" />
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" Text="Word操作" />
                            <TextBlock FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="Word文档编辑模块" />
                        </StackPanel>
                    </StackPanel>
                </ListViewItem>
            </ListView.Items>
        </ListView>
    </Grid>
</ContentDialog>
