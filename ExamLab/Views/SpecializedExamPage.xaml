&lt;UserControl x:Class="ExamLab.Views.SpecializedExamPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ExamLab.ViewModels"
             xmlns:converters="using:ExamLab.Converters"
             mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <converters:NullToBooleanConverter x:Key="NullToBooleanConverter" />
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 顶部工具栏 -->
        <Border Grid.Row="0" Padding="16,8" Background="{ThemeResource CardBackgroundFillColorDefault}">
            <StackPanel Orientation="Horizontal" Spacing="16">
                <TextBlock VerticalAlignment="Center" FontSize="14" Text="专项试卷制作" />
                <TextBlock VerticalAlignment="Center" FontSize="16" Foreground="Orange" Text="●" 
                           ToolTipService.ToolTip="有未保存的更改" 
                           Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BoolToVisibilityConverter}}" />
                <Button Command="{Binding CreateSpecializedExamCommand}" Content="新建专项试卷" />
                <Button Command="{Binding SaveSpecializedExamCommand}" Content="保存" 
                        IsEnabled="{Binding SelectedSpecializedExam, Converter={StaticResource NullToBooleanConverter}}" />
                <Button Command="{Binding ExportSpecializedExamCommand}" 
                        CommandParameter="{Binding SelectedSpecializedExam}"
                        Content="导出" 
                        IsEnabled="{Binding SelectedSpecializedExam, Converter={StaticResource NullToBooleanConverter}}" />
            </StackPanel>
        </Border>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- 左侧专项试卷列表 -->
            <Border Grid.Column="0" Background="{ThemeResource LayerFillColorDefault}" BorderBrush="{ThemeResource CardStrokeColorDefault}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- 专项试卷标题 -->
                    <Border Grid.Row="0" Padding="16,12" Background="{ThemeResource CardBackgroundFillColorDefault}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <SymbolIcon Symbol="Document" FontSize="16" />
                            <TextBlock Text="专项试卷" FontWeight="SemiBold" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding SpecializedExamCount}" 
                                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" 
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>

                    <!-- 空状态提示 -->
                    <Border Grid.Row="1" Margin="16" 
                            Visibility="{Binding SpecializedExamCount, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Inverse}">
                        <StackPanel VerticalAlignment="Center" Spacing="16">
                            <SymbolIcon Symbol="Document" FontSize="48" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" HorizontalAlignment="Center" />
                            <TextBlock Text="暂无专项试卷" FontSize="16" HorizontalAlignment="Center" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
                            <TextBlock Text="点击上方"新建专项试卷"按钮开始创建" FontSize="14" HorizontalAlignment="Center" 
                                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>

                    <!-- 专项试卷列表 -->
                    <ListView Grid.Row="1" Margin="8,0" 
                              ItemsSource="{Binding SpecializedExams}" 
                              SelectedItem="{Binding SelectedSpecializedExam, Mode=TwoWay}" 
                              Visibility="{Binding SpecializedExamCount, Converter={StaticResource CountToVisibilityConverter}}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="8,4" Padding="0,5">
                                    <Grid.ContextFlyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem Click="CloneSpecializedExam_Click" Tag="{Binding}" Text="克隆试卷">
                                                <MenuFlyoutItem.Icon>
                                                    <SymbolIcon Symbol="Copy" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutItem Click="DeleteSpecializedExam_Click" Tag="{Binding}" Text="删除试卷">
                                                <MenuFlyoutItem.Icon>
                                                    <SymbolIcon Symbol="Delete" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                        </MenuFlyout>
                                    </Grid.ContextFlyout>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- 试卷名称 -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Name}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" />

                                    <!-- 模块类型标识 -->
                                    <Border Grid.Row="0" Grid.Column="1" Background="{ThemeResource AccentFillColorDefaultBrush}" 
                                            CornerRadius="8" Padding="6,2" Margin="4,0,0,0">
                                        <TextBlock Text="{Binding Modules[0].Type}" FontSize="10" Foreground="White" />
                                    </Border>

                                    <!-- 描述 -->
                                    <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                               Text="{Binding Description}" FontSize="12" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" 
                                               TextTrimming="CharacterEllipsis" Margin="0,2,0,0" />

                                    <!-- 统计信息 -->
                                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                                                Orientation="Horizontal" Spacing="12" Margin="0,4,0,0">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <SymbolIcon Symbol="Document" FontSize="12" />
                                            <TextBlock Text="{Binding Modules[0].QuestionCount}" FontSize="12" />
                                            <TextBlock Text="题" FontSize="12" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <SymbolIcon Symbol="Target" FontSize="12" />
                                            <TextBlock Text="{Binding Modules[0].OperationPointCount}" FontSize="12" />
                                            <TextBlock Text="操作点" FontSize="12" />
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!-- 右侧内容区域 -->
            <Grid Grid.Column="1">
                <!-- 默认显示 -->
                <Border Margin="16" Visibility="{Binding SelectedModule, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}">
                    <StackPanel VerticalAlignment="Center" Spacing="16">
                        <SymbolIcon Symbol="Document" FontSize="64" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" HorizontalAlignment="Center" />
                        <TextBlock HorizontalAlignment="Center" FontSize="24" FontWeight="SemiBold" Text="欢迎使用专项试卷制作系统" />
                        <TextBlock HorizontalAlignment="Center" FontSize="16" 
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" 
                                   Text="专项试卷专注于单一模块的深度练习" />
                        <TextBlock HorizontalAlignment="Center" FontSize="14" 
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" 
                                   Text="请选择左侧的专项试卷开始配置，或点击"新建专项试卷"创建新的专项试卷" 
                                   TextWrapping="Wrap" TextAlignment="Center" MaxWidth="400" />
                    </StackPanel>
                </Border>

                <!-- 模块内容显示 -->
                <ContentPresenter Content="{Binding CurrentContentView}" 
                                  Visibility="{Binding SelectedModule, Converter={StaticResource NullToVisibilityConverter}}" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
