<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:Class="ExamLab.Views.SpecializedExamPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:converters="using:ExamLab.Converters" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="using:ExamLab.Views" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">

    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <converters:NullToBooleanConverter x:Key="NullToBooleanConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
        <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />
        <converters:ModuleTypeToVisibilityConverter x:Key="ModuleTypeToVisibilityConverter" />
        <converters:ParameterTypeToVisibilityConverter x:Key="ParameterTypeToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  左侧专项试卷列表  -->
        <Grid Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefault}" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" BorderThickness="0,0,1,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  专项试卷列表标题  -->
            <TextBlock Grid.Row="0" Margin="16,16,16,0" FontSize="16" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorTertiaryBrush}" Text="专项试卷" />

            <!--  专项试卷列表  -->
            <Grid Grid.Row="1">
                <!--  空状态提示  -->
                <Border Margin="16" Padding="16" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="8" Visibility="{Binding SpecializedExams.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Zero}">
                    <StackPanel HorizontalAlignment="Center" Spacing="12">
                        <FontIcon FontSize="32" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Glyph="&#xE8A5;" />
                        <TextBlock HorizontalAlignment="Center" FontSize="14" FontWeight="Medium" Text="暂无专项试卷" />
                        <TextBlock HorizontalAlignment="Center" FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="点击上方工具栏的新建专项试卷开始创建" TextWrapping="Wrap" />
                    </StackPanel>
                </Border>

                <!--  专项试卷ListView  -->
                <ListView Margin="8" Background="Transparent" ItemsSource="{Binding SpecializedExams}" SelectedItem="{Binding SelectedSpecializedExam, Mode=TwoWay}" SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="12" CornerRadius="8">
                                <!--  试卷内容  -->
                                <StackPanel>
                                    <!--  试卷名称  -->
                                    <TextBlock FontSize="14" FontWeight="SemiBold" Text="{Binding Name}" TextTrimming="CharacterEllipsis" />

                                    <!--  试卷描述  -->
                                    <TextBlock Margin="0,4,0,0" FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="{Binding Description}" TextTrimming="CharacterEllipsis" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>

        <!--  右侧内容区域  -->
        <Grid Grid.Column="1">
            <!--  默认显示  -->
            <Border Margin="16" Visibility="{Binding SelectedSpecializedExam, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}">
                <StackPanel VerticalAlignment="Center" Spacing="16">
                    <FontIcon FontSize="48" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Glyph="&#xE8A5;" />
                    <TextBlock HorizontalAlignment="Center" FontSize="24" FontWeight="SemiBold" Text="专项试卷制作" />
                    <TextBlock HorizontalAlignment="Center" FontSize="16" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="请选择左侧的专项试卷开始编辑" />
                    <TextBlock HorizontalAlignment="Center" FontSize="14" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="或点击工具栏的新建专项试卷创建新的专项试卷" />
                </StackPanel>
            </Border>

            <!--  专项试卷内容显示  -->
            <Grid Visibility="{Binding SelectedSpecializedExam, Converter={StaticResource NullToVisibilityConverter}}">
                <!--  模块内容显示区域  -->
                <ScrollViewer Margin="16,8,16,16" CornerRadius="8">
                    <StackPanel Spacing="16">
                        <!--  模块信息卡片  -->
                        <Border Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultSolidBrush}" BorderThickness="1" CornerRadius="8" Visibility="{Binding SelectedModule, Converter={StaticResource NullToVisibilityConverter}}">
                            <StackPanel Spacing="12">
                                <TextBlock FontSize="16" FontWeight="SemiBold" Text="模块信息" />
                                <TextBlock FontSize="14" FontWeight="Medium" Text="{Binding SelectedModule.Name}" />
                                <TextBlock FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="{Binding SelectedModule.Description}" TextWrapping="Wrap" />

                                <StackPanel Orientation="Horizontal" Spacing="24">
                                    <StackPanel Spacing="4">
                                        <TextBlock FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="题目数量" />
                                        <TextBlock FontSize="16" FontWeight="SemiBold" Text="{Binding SelectedModule.Questions.Count}" />
                                    </StackPanel>
                                    <StackPanel Spacing="4">
                                        <TextBlock FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="总分值" />
                                        <TextBlock FontSize="16" FontWeight="SemiBold" Text="{Binding SelectedModule.TotalScore}" />
                                    </StackPanel>
                                </StackPanel>

                                <Button HorizontalAlignment="Left" Command="{Binding AddQuestionCommand}" Content="添加题目" Style="{ThemeResource AccentButtonStyle}" />
                            </StackPanel>
                        </Border>

                        <!--  题目列表  -->
                        <Border Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultSolidBrush}" BorderThickness="1" CornerRadius="8" Visibility="{Binding SelectedModule, Converter={StaticResource NullToVisibilityConverter}}">
                            <StackPanel Spacing="12">
                                <TextBlock FontSize="16" FontWeight="SemiBold" Text="题目列表" />

                                <!--  题目列表内容  -->
                                <ListView Background="Transparent" ItemsSource="{Binding SelectedModule.Questions}" SelectedItem="{Binding SelectedQuestion, Mode=TwoWay}" SelectionMode="Single">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="10" CornerRadius="6">
                                                <StackPanel Spacing="4">
                                                    <TextBlock FontSize="14" FontWeight="SemiBold" Text="{Binding Title}" />
                                                    <TextBlock FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="{Binding Content}" TextTrimming="CharacterEllipsis" />
                                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                                        <TextBlock FontSize="11" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}">
                                                            <Run Text="分值: " />
                                                            <Run Text="{Binding TotalScore}" />
                                                        </TextBlock>
                                                        <TextBlock FontSize="11" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}">
                                                            <Run Text="操作点: " />
                                                            <Run Text="{Binding OperationPoints.Count}" />
                                                        </TextBlock>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </Border>

                        <!--  题目配置  -->
                        <Border Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultSolidBrush}" BorderThickness="1" CornerRadius="8" Visibility="{Binding SelectedQuestion, Converter={StaticResource NullToVisibilityConverter}}">
                            <StackPanel Spacing="12">
                                <TextBlock FontSize="16" FontWeight="SemiBold" Text="题目配置" />

                                <TextBox Header="题目标题" Text="{Binding SelectedQuestion.Title, Mode=TwoWay}" />
                                <TextBox Height="80" AcceptsReturn="True" Header="题目内容" Text="{Binding SelectedQuestion.Content, Mode=TwoWay}" />
                                <TextBox Header="题目分值" PlaceholderText="10" Text="{Binding SelectedQuestion.CSharpDirectScore, Mode=TwoWay}" />

                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Button Command="{Binding AddOperationPointCommand}" Content="添加操作点" Style="{ThemeResource AccentButtonStyle}" />
                                </StackPanel>

                                    <!-- 操作点列表 -->
                                    <StackPanel Spacing="8">
                                        <TextBlock FontSize="14" FontWeight="SemiBold" Text="操作点" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="3*" />
                                            </Grid.ColumnDefinitions>

                                            <!-- 左侧：操作点列表 -->
                                            <ListView Grid.Column="0" Height="200" Background="Transparent"
                                                      ItemsSource="{Binding SelectedQuestion.OperationPoints}"
                                                      SelectedItem="{Binding SelectedOperationPoint, Mode=TwoWay}"
                                                      SelectionMode="Single">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                                            <TextBlock Text="🧩" />
                                                            <TextBlock Text="{Binding Name}" />
                                                            <TextBlock Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" FontSize="12" Text="{Binding Score}" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>

                                            <!-- 右侧：操作点编辑 -->
                                            <StackPanel Grid.Column="1" Spacing="8" Margin="12,0,0,0"
                                                        Visibility="{Binding SelectedOperationPoint, Converter={StaticResource NullToVisibilityConverter}}">
                                                <TextBlock FontSize="14" FontWeight="SemiBold" Text="操作点配置" />

                                                <TextBox Header="名称" Text="{Binding SelectedOperationPoint.Name, Mode=TwoWay}" />
                                                <TextBox Header="描述" Text="{Binding SelectedOperationPoint.Description, Mode=TwoWay}" />
                                                <TextBox Header="分值" Text="{Binding SelectedOperationPoint.Score, Mode=TwoWay}" />

                                                <!-- 根据模块显示不同知识点选择 -->
                                                <ComboBox Header="Windows知识点"
                                                          ItemsSource="{Binding WindowsKnowledgeTypes}"
                                                          SelectedItem="{Binding SelectedOperationPoint.WindowsKnowledgeType, Mode=TwoWay}"
                                                          Visibility="{Binding SelectedModule.Type, Converter={StaticResource ModuleTypeToVisibilityConverter}, ConverterParameter=Windows}" />
                                                <ComboBox Header="PowerPoint知识点"
                                                          ItemsSource="{Binding PowerPointKnowledgeTypes}"
                                                          SelectedItem="{Binding SelectedOperationPoint.PowerPointKnowledgeType, Mode=TwoWay}"
                                                          Visibility="{Binding SelectedModule.Type, Converter={StaticResource ModuleTypeToVisibilityConverter}, ConverterParameter=PowerPoint}" />
                                                <ComboBox Header="Word知识点"
                                                          ItemsSource="{Binding WordKnowledgeTypes}"
                                                          SelectedItem="{Binding SelectedOperationPoint.WordKnowledgeType, Mode=TwoWay}"
                                                          Visibility="{Binding SelectedModule.Type, Converter={StaticResource ModuleTypeToVisibilityConverter}, ConverterParameter=Word}" />
                                                <ComboBox Header="Excel知识点"
                                                          ItemsSource="{Binding ExcelKnowledgeTypes}"
                                                          SelectedItem="{Binding SelectedOperationPoint.ExcelKnowledgeType, Mode=TwoWay}"
                                                          Visibility="{Binding SelectedModule.Type, Converter={StaticResource ModuleTypeToVisibilityConverter}, ConverterParameter=Excel}" />

                                                <!-- 参数列表与编辑 -->
                                                <StackPanel Spacing="6">
                                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                                        <TextBlock FontWeight="SemiBold" Text="参数" />
                                                        <Button Content="添加参数" Command="{Binding AddParameterCommand}" />
                                                    </StackPanel>

                                                    <ListView ItemsSource="{Binding SelectedOperationPoint.Parameters}" Height="120"
                                                              SelectedItem="{Binding SelectedParameter, Mode=TwoWay}">
                                                        <ListView.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                                    <TextBlock Text="{Binding DisplayName}" />
                                                                    <TextBlock Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" Text="{Binding Type}" />
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ListView.ItemTemplate>
                                                    </ListView>

                                                    <StackPanel Spacing="6" Visibility="{Binding SelectedParameter, Converter={StaticResource NullToVisibilityConverter}}">
                                                        <TextBox Header="参数名" Text="{Binding SelectedParameter.Name, Mode=TwoWay}" />
                                                        <TextBox Header="显示名" Text="{Binding SelectedParameter.DisplayName, Mode=TwoWay}" />
                                                        <TextBox Header="描述" Text="{Binding SelectedParameter.Description, Mode=TwoWay}" />
                                                        <ComboBox Header="类型" SelectedItem="{Binding SelectedParameter.Type, Mode=TwoWay}"
                                                                  ItemsSource="{Binding ParameterTypes}" />
                                                        <TextBox Header="值" Text="{Binding SelectedParameter.Value, Mode=TwoWay}" />
                                                        <TextBox Header="默认值" Text="{Binding SelectedParameter.DefaultValue, Mode=TwoWay}" />
                                                        <TextBox Header="校验(正则)" Text="{Binding SelectedParameter.ValidationRule, Mode=TwoWay}" />
                                                        <TextBox Header="错误提示" Text="{Binding SelectedParameter.ValidationErrorMessage, Mode=TwoWay}" />
                                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                                            <Button Content="删除参数" Command="{Binding DeleteParameterCommand}" CommandParameter="{Binding SelectedParameter, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>

                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
