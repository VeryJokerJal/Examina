&lt;UserControl x:Class="ExamLab.Views.Controls.PositionParameterEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500"&gt;
    &lt;Grid&gt;
        &lt;Grid.RowDefinitions&gt;
            &lt;RowDefinition Height="Auto"/&gt;
            &lt;RowDefinition Height="*"/&gt;
        &lt;/Grid.RowDefinitions&gt;
        
        &lt;!-- 位置类型选择 --&gt;
        &lt;StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10"&gt;
            &lt;TextBlock Text="位置类型：" VerticalAlignment="Center" Margin="0,0,10,0"/&gt;
            &lt;ComboBox x:Name="PositionTypeComboBox" Width="120" 
                      SelectionChanged="PositionTypeComboBox_SelectionChanged"&gt;
                &lt;ComboBoxItem Content="绝对位置" Tag="Absolute"/&gt;
                &lt;ComboBoxItem Content="相对位置" Tag="Relative"/&gt;
                &lt;ComboBoxItem Content="对齐位置" Tag="Alignment"/&gt;
            &lt;/ComboBox&gt;
        &lt;/StackPanel&gt;
        
        &lt;!-- 参数编辑区域 --&gt;
        &lt;ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"&gt;
            &lt;StackPanel&gt;
                
                &lt;!-- 绝对位置参数 --&gt;
                &lt;GroupBox x:Name="AbsolutePositionGroup" Header="绝对位置设置" Visibility="Collapsed"&gt;
                    &lt;Grid Margin="10"&gt;
                        &lt;Grid.RowDefinitions&gt;
                            &lt;RowDefinition Height="Auto"/&gt;
                            &lt;RowDefinition Height="Auto"/&gt;
                            &lt;RowDefinition Height="Auto"/&gt;
                            &lt;RowDefinition Height="Auto"/&gt;
                        &lt;/Grid.RowDefinitions&gt;
                        &lt;Grid.ColumnDefinitions&gt;
                            &lt;ColumnDefinition Width="Auto"/&gt;
                            &lt;ColumnDefinition Width="*"/&gt;
                        &lt;/Grid.ColumnDefinitions&gt;
                        
                        &lt;TextBlock Grid.Row="0" Grid.Column="0" Text="坐标系统：" VerticalAlignment="Center" Margin="0,0,10,5"/&gt;
                        &lt;ComboBox Grid.Row="0" Grid.Column="1" x:Name="CoordinateSystemComboBox" Margin="0,0,0,5"&gt;
                            &lt;ComboBoxItem Content="磅 (Points)" Tag="Points" IsSelected="True"/&gt;
                            &lt;ComboBoxItem Content="厘米 (Centimeters)" Tag="Centimeters"/&gt;
                            &lt;ComboBoxItem Content="英寸 (Inches)" Tag="Inches"/&gt;
                            &lt;ComboBoxItem Content="像素 (Pixels)" Tag="Pixels"/&gt;
                        &lt;/ComboBox&gt;
                        
                        &lt;TextBlock Grid.Row="1" Grid.Column="0" Text="X坐标：" VerticalAlignment="Center" Margin="0,0,10,5"/&gt;
                        &lt;TextBox Grid.Row="1" Grid.Column="1" x:Name="XCoordinateTextBox" Margin="0,0,0,5"/&gt;
                        
                        &lt;TextBlock Grid.Row="2" Grid.Column="0" Text="Y坐标：" VerticalAlignment="Center" Margin="0,0,10,5"/&gt;
                        &lt;TextBox Grid.Row="2" Grid.Column="1" x:Name="YCoordinateTextBox" Margin="0,0,0,5"/&gt;
                        
                        &lt;CheckBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" x:Name="LockAspectRatioCheckBox" 
                                  Content="锁定纵横比" Margin="0,5,0,0"/&gt;
                    &lt;/Grid&gt;
                &lt;/GroupBox&gt;
                
                &lt;!-- 相对位置参数 --&gt;
                &lt;GroupBox x:Name="RelativePositionGroup" Header="相对位置设置" Visibility="Collapsed"&gt;
                    &lt;Grid Margin="10"&gt;
                        &lt;Grid.RowDefinitions&gt;
                            &lt;RowDefinition Height="Auto"/&gt;
                            &lt;RowDefinition Height="Auto"/&gt;
                            &lt;RowDefinition Height="Auto"/&gt;
                            &lt;RowDefinition Height="Auto"/&gt;
                            &lt;RowDefinition Height="Auto"/&gt;
                        &lt;/Grid.RowDefinitions&gt;
                        &lt;Grid.ColumnDefinitions&gt;
                            &lt;ColumnDefinition Width="Auto"/&gt;
                            &lt;ColumnDefinition Width="*"/&gt;
                        &lt;/Grid.ColumnDefinitions&gt;
                        
                        &lt;TextBlock Grid.Row="0" Grid.Column="0" Text="参考点：" VerticalAlignment="Center" Margin="0,0,10,5"/&gt;
                        &lt;ComboBox Grid.Row="0" Grid.Column="1" x:Name="RelativeReferenceComboBox" Margin="0,0,0,5"&gt;
                            &lt;ComboBoxItem Content="页面" Tag="Page" IsSelected="True"/&gt;
                            &lt;ComboBoxItem Content="页边距" Tag="Margin"/&gt;
                            &lt;ComboBoxItem Content="段落" Tag="Paragraph"/&gt;
                            &lt;ComboBoxItem Content="列" Tag="Column"/&gt;
                            &lt;ComboBoxItem Content="字符" Tag="Character"/&gt;
                        &lt;/ComboBox&gt;
                        
                        &lt;TextBlock Grid.Row="1" Grid.Column="0" Text="坐标系统：" VerticalAlignment="Center" Margin="0,0,10,5"/&gt;
                        &lt;ComboBox Grid.Row="1" Grid.Column="1" x:Name="RelativeCoordinateSystemComboBox" Margin="0,0,0,5"&gt;
                            &lt;ComboBoxItem Content="磅 (Points)" Tag="Points" IsSelected="True"/&gt;
                            &lt;ComboBoxItem Content="厘米 (Centimeters)" Tag="Centimeters"/&gt;
                            &lt;ComboBoxItem Content="英寸 (Inches)" Tag="Inches"/&gt;
                            &lt;ComboBoxItem Content="像素 (Pixels)" Tag="Pixels"/&gt;
                        &lt;/ComboBox&gt;
                        
                        &lt;TextBlock Grid.Row="2" Grid.Column="0" Text="相对X坐标：" VerticalAlignment="Center" Margin="0,0,10,5"/&gt;
                        &lt;TextBox Grid.Row="2" Grid.Column="1" x:Name="RelativeXCoordinateTextBox" Margin="0,0,0,5"/&gt;
                        
                        &lt;TextBlock Grid.Row="3" Grid.Column="0" Text="相对Y坐标：" VerticalAlignment="Center" Margin="0,0,10,5"/&gt;
                        &lt;TextBox Grid.Row="3" Grid.Column="1" x:Name="RelativeYCoordinateTextBox" Margin="0,0,0,5"/&gt;
                        
                        &lt;CheckBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" x:Name="RelativeLockAspectRatioCheckBox" 
                                  Content="锁定纵横比" Margin="0,5,0,0"/&gt;
                    &lt;/Grid&gt;
                &lt;/GroupBox&gt;
                
                &lt;!-- 对齐位置参数 --&gt;
                &lt;GroupBox x:Name="AlignmentPositionGroup" Header="对齐位置设置" Visibility="Collapsed"&gt;
                    &lt;Grid Margin="10"&gt;
                        &lt;Grid.RowDefinitions&gt;
                            &lt;RowDefinition Height="Auto"/&gt;
                            &lt;RowDefinition Height="Auto"/&gt;
                        &lt;/Grid.RowDefinitions&gt;
                        &lt;Grid.ColumnDefinitions&gt;
                            &lt;ColumnDefinition Width="Auto"/&gt;
                            &lt;ColumnDefinition Width="*"/&gt;
                        &lt;/Grid.ColumnDefinitions&gt;
                        
                        &lt;TextBlock Grid.Row="0" Grid.Column="0" Text="水平对齐：" VerticalAlignment="Center" Margin="0,0,10,5"/&gt;
                        &lt;ComboBox Grid.Row="0" Grid.Column="1" x:Name="HorizontalAlignmentComboBox" Margin="0,0,0,5"&gt;
                            &lt;ComboBoxItem Content="左对齐" Tag="Left" IsSelected="True"/&gt;
                            &lt;ComboBoxItem Content="居中对齐" Tag="Center"/&gt;
                            &lt;ComboBoxItem Content="右对齐" Tag="Right"/&gt;
                            &lt;ComboBoxItem Content="两端对齐" Tag="Justify"/&gt;
                            &lt;ComboBoxItem Content="分散对齐" Tag="Distribute"/&gt;
                        &lt;/ComboBox&gt;
                        
                        &lt;TextBlock Grid.Row="1" Grid.Column="0" Text="垂直对齐：" VerticalAlignment="Center" Margin="0,0,10,5"/&gt;
                        &lt;ComboBox Grid.Row="1" Grid.Column="1" x:Name="VerticalAlignmentComboBox" Margin="0,0,0,5"&gt;
                            &lt;ComboBoxItem Content="顶端对齐" Tag="Top" IsSelected="True"/&gt;
                            &lt;ComboBoxItem Content="居中对齐" Tag="Middle"/&gt;
                            &lt;ComboBoxItem Content="底端对齐" Tag="Bottom"/&gt;
                            &lt;ComboBoxItem Content="基线对齐" Tag="Baseline"/&gt;
                        &lt;/ComboBox&gt;
                    &lt;/Grid&gt;
                &lt;/GroupBox&gt;
                
                &lt;!-- 预览区域 --&gt;
                &lt;GroupBox Header="位置预览" Margin="0,10,0,0"&gt;
                    &lt;TextBlock x:Name="PositionPreviewTextBlock" Margin="10" 
                               Text="请选择位置类型并设置参数" 
                               TextWrapping="Wrap" 
                               FontStyle="Italic" 
                               Foreground="Gray"/&gt;
                &lt;/GroupBox&gt;
                
            &lt;/StackPanel&gt;
        &lt;/ScrollViewer&gt;
    &lt;/Grid&gt;
&lt;/UserControl&gt;
