@{
    ViewData["Title"] = "文件上传测试";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-upload me-2"></i>
                        文件上传测试 (支持最大500MB)
                    </h4>
                </div>
                <div class="card-body">
                    <!-- 单文件上传 -->
                    <div class="mb-4">
                        <h5>单文件上传</h5>
                        <form id="singleFileForm" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="singleFile" class="form-label">选择文件</label>
                                <input type="file" class="form-control" id="singleFile" name="file" required>
                                <div class="form-text">支持最大500MB文件</div>
                            </div>
                            <div class="mb-3">
                                <label for="description" class="form-label">文件描述</label>
                                <input type="text" class="form-control" id="description" name="description" placeholder="可选">
                            </div>
                            <div class="mb-3">
                                <label for="tags" class="form-label">标签</label>
                                <input type="text" class="form-control" id="tags" name="tags" placeholder="可选，用逗号分隔">
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-upload me-1"></i>
                                上传文件
                            </button>
                        </form>
                        
                        <!-- 单文件上传进度 -->
                        <div id="singleProgress" class="mt-3" style="display: none;">
                            <div class="progress">
                                <div id="singleProgressBar" class="progress-bar" role="progressbar" style="width: 0%"></div>
                            </div>
                            <div id="singleProgressText" class="mt-2 text-center"></div>
                        </div>
                        
                        <!-- 单文件上传结果 -->
                        <div id="singleResult" class="mt-3"></div>
                    </div>

                    <hr>

                    <!-- 多文件上传 -->
                    <div class="mb-4">
                        <h5>多文件上传</h5>
                        <form id="multipleFileForm" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="multipleFiles" class="form-label">选择多个文件</label>
                                <input type="file" class="form-control" id="multipleFiles" name="files" multiple required>
                                <div class="form-text">支持同时上传多个文件，每个文件最大500MB</div>
                            </div>
                            <div class="mb-3">
                                <label for="multipleDescription" class="form-label">文件描述</label>
                                <input type="text" class="form-control" id="multipleDescription" name="description" placeholder="可选">
                            </div>
                            <div class="mb-3">
                                <label for="multipleTags" class="form-label">标签</label>
                                <input type="text" class="form-control" id="multipleTags" name="tags" placeholder="可选，用逗号分隔">
                            </div>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-upload me-1"></i>
                                上传多个文件
                            </button>
                        </form>
                        
                        <!-- 多文件上传进度 -->
                        <div id="multipleProgress" class="mt-3" style="display: none;">
                            <div class="progress">
                                <div id="multipleProgressBar" class="progress-bar" role="progressbar" style="width: 0%"></div>
                            </div>
                            <div id="multipleProgressText" class="mt-2 text-center"></div>
                        </div>
                        
                        <!-- 多文件上传结果 -->
                        <div id="multipleResult" class="mt-3"></div>
                    </div>

                    <!-- 支持的文件类型说明 -->
                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle me-1"></i>支持的文件类型：</h6>
                        <ul class="mb-0">
                            <li><strong>压缩包：</strong>.zip, .rar, .7z</li>
                            <li><strong>文档：</strong>.pdf, .doc, .docx, .xls, .xlsx, .ppt, .pptx, .txt, .rtf, .json, .xml</li>
                            <li><strong>图片：</strong>.jpg, .jpeg, .png, .gif, .bmp</li>
                            <li><strong>视频：</strong>.mp4, .avi, .mov, .wmv</li>
                            <li><strong>音频：</strong>.mp3, .wav, .wma</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
$(document).ready(function() {
    // 单文件上传
    $('#singleFileForm').on('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const fileInput = $('#singleFile')[0];
        
        if (!fileInput.files.length) {
            showAlert('请选择要上传的文件', 'danger');
            return;
        }
        
        const file = fileInput.files[0];
        const maxSize = 500 * 1024 * 1024; // 500MB
        
        if (file.size > maxSize) {
            showAlert('文件大小不能超过500MB', 'danger');
            return;
        }
        
        uploadFile('/api/fileupload/upload', formData, 'single');
    });
    
    // 多文件上传
    $('#multipleFileForm').on('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const fileInput = $('#multipleFiles')[0];
        
        if (!fileInput.files.length) {
            showAlert('请选择要上传的文件', 'danger');
            return;
        }
        
        // 检查每个文件大小
        const maxSize = 500 * 1024 * 1024; // 500MB
        for (let i = 0; i < fileInput.files.length; i++) {
            if (fileInput.files[i].size > maxSize) {
                showAlert(`文件 "${fileInput.files[i].name}" 大小不能超过500MB`, 'danger');
                return;
            }
        }
        
        uploadFile('/api/fileupload/upload-multiple', formData, 'multiple');
    });
    
    function uploadFile(url, formData, type) {
        const progressDiv = $(`#${type}Progress`);
        const progressBar = $(`#${type}ProgressBar`);
        const progressText = $(`#${type}ProgressText`);
        const resultDiv = $(`#${type}Result`);
        
        // 显示进度条
        progressDiv.show();
        progressBar.css('width', '0%');
        progressText.text('准备上传...');
        resultDiv.empty();
        
        // 禁用提交按钮
        $(`#${type}FileForm button[type="submit"]`).prop('disabled', true);
        
        $.ajax({
            url: url,
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            xhr: function() {
                const xhr = new window.XMLHttpRequest();
                xhr.upload.addEventListener('progress', function(e) {
                    if (e.lengthComputable) {
                        const percentComplete = (e.loaded / e.total) * 100;
                        progressBar.css('width', percentComplete + '%');
                        progressText.text(`上传进度: ${Math.round(percentComplete)}%`);
                    }
                }, false);
                return xhr;
            },
            success: function(response) {
                progressBar.css('width', '100%');
                progressText.text('上传完成！');
                
                if (response.success) {
                    if (type === 'single') {
                        showUploadResult(response.data, resultDiv, 'success');
                    } else {
                        showMultipleUploadResult(response.data, resultDiv);
                    }
                } else {
                    showAlert(response.message || '上传失败', 'danger', resultDiv);
                }
            },
            error: function(xhr, status, error) {
                progressBar.removeClass('progress-bar').addClass('progress-bar bg-danger');
                progressText.text('上传失败！');
                
                let errorMessage = '上传失败';
                if (xhr.responseJSON && xhr.responseJSON.message) {
                    errorMessage = xhr.responseJSON.message;
                } else if (xhr.status === 413) {
                    errorMessage = '文件太大，服务器无法处理';
                } else {
                    errorMessage = `上传失败: ${error}`;
                }
                
                showAlert(errorMessage, 'danger', resultDiv);
            },
            complete: function() {
                // 重新启用提交按钮
                $(`#${type}FileForm button[type="submit"]`).prop('disabled', false);
            }
        });
    }
    
    function showUploadResult(data, container, type = 'success') {
        const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
        const icon = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle';
        
        const html = `
            <div class="alert ${alertClass}">
                <h6><i class="${icon} me-1"></i>上传成功</h6>
                <p><strong>文件名：</strong>${data.fileName}</p>
                <p><strong>文件大小：</strong>${formatFileSize(data.fileSize)}</p>
                <p><strong>上传时间：</strong>${new Date(data.uploadedAt).toLocaleString()}</p>
                <p><strong>下载链接：</strong><a href="${data.fileUrl}" target="_blank">${data.fileUrl}</a></p>
            </div>
        `;
        container.html(html);
    }
    
    function showMultipleUploadResult(data, container) {
        let html = `
            <div class="alert alert-info">
                <h6><i class="fas fa-info-circle me-1"></i>上传结果</h6>
                <p>总计：${data.totalCount} 个文件，成功：${data.successCount} 个，失败：${data.failedCount} 个</p>
            </div>
        `;
        
        if (data.successFiles.length > 0) {
            html += '<div class="alert alert-success"><h6>成功上传的文件：</h6><ul>';
            data.successFiles.forEach(file => {
                html += `<li>${file.fileName} (${formatFileSize(file.fileSize)})</li>`;
            });
            html += '</ul></div>';
        }
        
        if (data.failedFiles.length > 0) {
            html += '<div class="alert alert-danger"><h6>上传失败的文件：</h6><ul>';
            data.failedFiles.forEach(file => {
                html += `<li>${file.fileName}: ${file.error}</li>`;
            });
            html += '</ul></div>';
        }
        
        container.html(html);
    }
    
    function showAlert(message, type, container = null) {
        const alertClass = `alert-${type}`;
        const icon = type === 'success' ? 'fas fa-check-circle' : 
                    type === 'danger' ? 'fas fa-exclamation-circle' : 
                    'fas fa-info-circle';
        
        const html = `
            <div class="alert ${alertClass} alert-dismissible fade show">
                <i class="${icon} me-1"></i>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        `;
        
        if (container) {
            container.html(html);
        } else {
            $('.container').prepend(html);
        }
    }
    
    function formatFileSize(bytes) {
        if (bytes === 0) return '0 Bytes';
        const k = 1024;
        const sizes = ['Bytes', 'KB', 'MB', 'GB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
    }
});
</script>
}
