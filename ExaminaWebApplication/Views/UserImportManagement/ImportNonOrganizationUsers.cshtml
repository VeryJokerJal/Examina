        margin-bottom: 1rem;
    }

    .breadcrumb-item a {
        color: var(--text-secondary);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .breadcrumb-item a:hover {
        color: var(--text-primary);
    }

    .breadcrumb-item.active {
        color: var(--text-primary);
    }
</style>
