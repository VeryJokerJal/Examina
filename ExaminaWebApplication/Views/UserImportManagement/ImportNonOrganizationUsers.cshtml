@{
    ViewData["Title"] = "非组织用户导入";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">用户导入管理</a></li>
                        <li class="breadcrumb-item active" aria-current="page">非组织用户导入</li>
                    </ol>
                </nav>
                <h1 class="page-title">
                    <i class="bi bi-person-plus me-2"></i>非组织用户导入
                </h1>
                <p class="page-subtitle">批量导入不属于任何组织的学生用户</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- 文件上传区域 -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-cloud-upload me-2"></i>选择Excel文件
                    </h5>
                </div>
                <div class="card-body">
                    <form id="uploadForm" enctype="multipart/form-data">
                        <div class="mb-4">
                            <div class="file-upload-area" id="fileUploadArea">
                                <input type="file" class="form-control" id="file" name="file" accept=".xlsx,.xls" required>
                                <div class="file-upload-hint mt-2">
                                    <i class="bi bi-cloud-upload-fill text-muted me-1"></i>
                                    <span class="text-muted">点击选择Excel文件或拖拽文件到此处</span>
                                </div>
                            </div>
                        </div>

                        <!-- 文件信息显示 -->
                        <div id="fileInfo" class="file-info mb-3" style="display: none;">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-file-earmark-excel text-success me-2"></i>
                                <div>
                                    <div class="fw-bold" id="fileName"></div>
                                    <div class="text-muted small" id="fileSize"></div>
                                </div>
                            </div>
                        </div>

                        <!-- 上传按钮 -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="button" class="btn btn-secondary me-md-2" onclick="resetForm()">
                                <i class="bi bi-arrow-clockwise me-2"></i>重置
                            </button>
                            <button type="submit" class="btn btn-primary" id="uploadBtn">
                                <i class="bi bi-upload me-2"></i>开始导入
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- 进度显示 -->
            <div id="progressCard" class="card mb-4" style="display: none;">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-hourglass-split me-2"></i>导入进度
                    </h5>
                </div>
                <div class="card-body">
                    <div class="progress mb-3">
                        <div id="progressBar" class="progress-bar progress-bar-striped progress-bar-animated" 
                             role="progressbar" style="width: 0%"></div>
                    </div>
                    <div id="progressText" class="text-center text-muted">准备导入...</div>
                </div>
            </div>

            <!-- 结果显示 -->
            <div id="resultCard" class="card" style="display: none;">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-clipboard-check me-2"></i>导入结果
                    </h5>
                </div>
                <div class="card-body">
                    <div id="resultSummary" class="mb-3"></div>
                    <div id="resultDetails"></div>
                </div>
            </div>
        </div>

        <!-- 侧边栏 -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>格式要求
                    </h5>
                </div>
                <div class="card-body">
                    <h6>Excel文件格式：</h6>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle text-success me-2"></i>第一列：姓名（必填）</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>第二列：手机号码（必填）</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>支持.xlsx和.xls格式</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>文件大小不超过10MB</li>
                    </ul>

                    <h6 class="mt-4">数据要求：</h6>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-exclamation-triangle text-warning me-2"></i>姓名不能为空</li>
                        <li><i class="bi bi-exclamation-triangle text-warning me-2"></i>手机号必须是11位数字</li>
                        <li><i class="bi bi-exclamation-triangle text-warning me-2"></i>手机号不能重复</li>
                        <li><i class="bi bi-exclamation-triangle text-warning me-2"></i>手机号不能已存在系统中</li>
                    </ul>

                    <div class="mt-4">
                        <h6>示例格式：</h6>
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>姓名</th>
                                        <th>手机号码</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>张三</td>
                                        <td>13812345678</td>
                                    </tr>
                                    <tr>
                                        <td>李四</td>
                                        <td>13987654321</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const uploadForm = document.getElementById('uploadForm');
    const fileInput = document.getElementById('file');
    const fileUploadArea = document.getElementById('fileUploadArea');
    const fileInfo = document.getElementById('fileInfo');
    const fileName = document.getElementById('fileName');
    const fileSize = document.getElementById('fileSize');
    const uploadBtn = document.getElementById('uploadBtn');
    const progressCard = document.getElementById('progressCard');
    const progressBar = document.getElementById('progressBar');
    const progressText = document.getElementById('progressText');
    const resultCard = document.getElementById('resultCard');
    const resultSummary = document.getElementById('resultSummary');
    const resultDetails = document.getElementById('resultDetails');

    // 文件选择事件
    fileInput.addEventListener('change', function(e) {
        handleFileSelect(e.target.files[0]);
    });

    // 拖拽上传
    fileUploadArea.addEventListener('dragover', function(e) {
        e.preventDefault();
        fileUploadArea.classList.add('drag-over');
    });

    fileUploadArea.addEventListener('dragleave', function(e) {
        e.preventDefault();
        fileUploadArea.classList.remove('drag-over');
    });

    fileUploadArea.addEventListener('drop', function(e) {
        e.preventDefault();
        fileUploadArea.classList.remove('drag-over');
        const files = e.dataTransfer.files;
        if (files.length > 0) {
            fileInput.files = files;
            handleFileSelect(files[0]);
        }
    });

    // 表单提交事件
    uploadForm.addEventListener('submit', function(e) {
        e.preventDefault();
        if (fileInput.files.length === 0) {
            alert('请选择要导入的Excel文件');
            return;
        }
        
        uploadFile();
    });

    function handleFileSelect(file) {
        if (file) {
            fileName.textContent = file.name;
            fileSize.textContent = formatFileSize(file.size);
            fileInfo.style.display = 'block';
        }
    }

    function formatFileSize(bytes) {
        if (bytes === 0) return '0 Bytes';
        const k = 1024;
        const sizes = ['Bytes', 'KB', 'MB', 'GB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
    }

    function uploadFile() {
        const formData = new FormData();
        formData.append('file', fileInput.files[0]);

        // 显示进度
        showProgress();
        
        fetch('/api/UserImport/import-non-organization-users', {
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            hideProgress();
            showResult(data);
        })
        .catch(error => {
            hideProgress();
            console.error('Error:', error);
            showError('导入失败: ' + error.message);
        });
    }

    function showProgress() {
        progressCard.style.display = 'block';
        uploadBtn.disabled = true;
        resultCard.style.display = 'none';
        
        let progress = 0;
        const interval = setInterval(() => {
            progress += Math.random() * 30;
            if (progress > 90) progress = 90;
            progressBar.style.width = progress + '%';
            progressText.textContent = '正在处理文件...';
        }, 500);
        
        // 存储interval以便后续清除
        progressCard.dataset.interval = interval;
    }

    function hideProgress() {
        const interval = progressCard.dataset.interval;
        if (interval) {
            clearInterval(interval);
        }
        progressBar.style.width = '100%';
        progressText.textContent = '处理完成';
        uploadBtn.disabled = false;
        
        setTimeout(() => {
            progressCard.style.display = 'none';
        }, 1000);
    }

    function showResult(data) {
        resultCard.style.display = 'block';
        
        if (data.isSuccess) {
            resultSummary.innerHTML = `
                <div class="alert alert-success">
                    <i class="bi bi-check-circle me-2"></i>
                    <strong>导入成功！</strong> 共导入 ${data.successCount} 条记录
                </div>
            `;
        } else {
            resultSummary.innerHTML = `
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>导入失败！</strong> ${data.errorMessage}
                </div>
            `;
        }

        // 显示详细结果
        let detailsHtml = `
            <div class="row mb-3">
                <div class="col-md-3">
                    <div class="text-center">
                        <div class="h4 text-primary">${data.totalRows || 0}</div>
                        <div class="text-muted">总行数</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center">
                        <div class="h4 text-info">${data.validRows || 0}</div>
                        <div class="text-muted">有效行数</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center">
                        <div class="h4 text-success">${data.successCount || 0}</div>
                        <div class="text-muted">成功导入</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center">
                        <div class="h4 text-danger">${data.failureCount || 0}</div>
                        <div class="text-muted">导入失败</div>
                    </div>
                </div>
            </div>
        `;

        // 显示错误信息
        if (data.excelErrors && data.excelErrors.length > 0) {
            detailsHtml += `
                <div class="mb-3">
                    <h6>Excel解析错误：</h6>
                    <ul class="list-group list-group-flush">
                        ${data.excelErrors.map(error => `<li class="list-group-item text-danger">${error}</li>`).join('')}
                    </ul>
                </div>
            `;
        }

        // 显示导入结果详情
        if (data.importResults && data.importResults.length > 0) {
            const failedResults = data.importResults.filter(r => !r.isSuccess);
            if (failedResults.length > 0) {
                detailsHtml += `
                    <div class="mb-3">
                        <h6>导入失败的记录：</h6>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>行号</th>
                                        <th>姓名</th>
                                        <th>手机号</th>
                                        <th>错误原因</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    ${failedResults.map(result => `
                                        <tr>
                                            <td>${result.rowNumber}</td>
                                            <td>${result.realName}</td>
                                            <td>${result.phoneNumber}</td>
                                            <td class="text-danger">${result.errorMessage}</td>
                                        </tr>
                                    `).join('')}
                                </tbody>
                            </table>
                        </div>
                    </div>
                `;
            }
        }

        resultDetails.innerHTML = detailsHtml;
    }

    function showError(message) {
        resultCard.style.display = 'block';
        resultSummary.innerHTML = `
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <strong>错误！</strong> ${message}
            </div>
        `;
        resultDetails.innerHTML = '';
    }

    window.resetForm = function() {
        uploadForm.reset();
        fileInfo.style.display = 'none';
        progressCard.style.display = 'none';
        resultCard.style.display = 'none';
        uploadBtn.disabled = false;
    };
});
</script>

<style>
    .file-upload-area {
        border: 2px dashed #dee2e6;
        border-radius: 0.375rem;
        padding: 2rem;
        text-align: center;
        transition: border-color 0.15s ease-in-out;
        cursor: pointer;
    }

    .file-upload-area:hover,
    .file-upload-area.drag-over {
        border-color: #0d6efd;
        background-color: #f8f9fa;
    }

    .file-info {
        padding: 1rem;
        background-color: #f8f9fa;
        border-radius: 0.375rem;
        border: 1px solid #dee2e6;
    }

    .page-header {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #dee2e6;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
    }

    .page-subtitle {
        color: #6c757d;
        font-size: 1.1rem;
        margin-bottom: 0;
    }

    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .card-header {
        border-bottom: none;
        font-weight: 600;
    }
</style>
