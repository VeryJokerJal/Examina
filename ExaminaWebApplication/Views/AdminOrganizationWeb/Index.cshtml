@model List<OrganizationDto>
@using ExaminaWebApplication.Models.Organization
@using ExaminaWebApplication.Models.Organization.Dto
@{
    ViewData["Title"] = "组织管理";
    Layout = "_Layout";
}

<!-- 页面标题 -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>
            <i class="bi bi-building me-2"></i>组织管理
        </h2>
        <p class="text-muted mb-0">管理系统中的所有组织</p>
    </div>
    <div>
        <a href="/Admin/Organization/Create" class="glass-btn glass-btn-primary">
            <i class="bi bi-plus-circle me-2"></i>创建组织
        </a>
    </div>
</div>

<!-- 成功/错误消息 -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success glass-alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger glass-alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- 统计卡片 -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="glass-card">
            <div class="card-body text-center">
                <i class="bi bi-building text-primary" style="font-size: 2rem;"></i>
                <h4 class="mt-2 mb-0">@Model.Count</h4>
                <small class="text-muted">总组织数</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="glass-card">
            <div class="card-body text-center">
                <i class="bi bi-mortarboard text-success" style="font-size: 2rem;"></i>
                <h4 class="mt-2 mb-0">@Model.Count(o => o.Type == OrganizationType.School)</h4>
                <small class="text-muted">学校组织</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="glass-card">
            <div class="card-body text-center">
                <i class="bi bi-briefcase text-info" style="font-size: 2rem;"></i>
                <h4 class="mt-2 mb-0">@Model.Count(o => o.Type == OrganizationType.Institution)</h4>
                <small class="text-muted">机构组织</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="glass-card">
            <div class="card-body text-center">
                <i class="bi bi-people text-warning" style="font-size: 2rem;"></i>
                <h4 class="mt-2 mb-0">@Model.Sum(o => o.StudentCount)</h4>
                <small class="text-muted">总成员数</small>
            </div>
        </div>
    </div>
</div>

<!-- 组织列表 -->
<div class="glass-card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-list-ul me-2"></i>组织列表
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>组织名称</th>
                            <th>类型</th>
                            <th>成员数</th>
                            <th>邀请码数</th>
                            <th>创建者</th>
                            <th>创建时间</th>
                            <th>状态</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var org in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi @(org.Type == OrganizationType.School ? "bi-mortarboard" : "bi-briefcase") me-2"></i>
                                        <div>
                                            <strong>@org.Name</strong>
                                            @if (!string.IsNullOrEmpty(org.Description))
                                            {
                                                <br><small class="text-muted">@org.Description</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge @(org.Type == OrganizationType.School ? "bg-success" : "bg-info")">
                                        @org.TypeDisplayName
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@org.StudentCount</span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@org.InvitationCodeCount</span>
                                </td>
                                <td>@org.CreatorUsername</td>
                                <td>
                                    <small>@org.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small>
                                </td>
                                <td>
                                    @if (org.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>激活
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle me-1"></i>停用
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="/Admin/Organization/Details/@org.Id" 
                                           class="btn btn-outline-primary btn-sm" 
                                           title="查看详情">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="/Admin/Organization/Edit/@org.Id" 
                                           class="btn btn-outline-secondary btn-sm" 
                                           title="编辑">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        @if (org.IsActive)
                                        {
                                            <button type="button" 
                                                    class="btn btn-outline-danger btn-sm" 
                                                    title="停用"
                                                    onclick="deactivateOrganization(@org.Id, '@org.Name')">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-building text-muted" style="font-size: 3rem;"></i>
                <h5 class="text-muted mt-3">暂无组织</h5>
                <p class="text-muted">点击上方"创建组织"按钮开始创建第一个组织</p>
                <a href="/Admin/Organization/Create" class="glass-btn glass-btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>创建组织
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // 停用组织
        async function deactivateOrganization(organizationId, organizationName) {
            if (confirm(`确定要停用组织"${organizationName}"吗？\n\n停用后该组织将无法使用，但不会删除已有数据。`)) {
                try {
                    const response = await fetch(`/Admin/Organization/Deactivate/${organizationId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        }
                    });

                    if (response.ok) {
                        showNotification('组织已停用', 'success');
                        setTimeout(() => {
                            window.location.reload();
                        }, 1000);
                    } else {
                        showNotification('停用失败，请稍后重试', 'danger');
                    }
                } catch (error) {
                    console.error('停用组织失败:', error);
                    showNotification('停用失败，请稍后重试', 'danger');
                }
            }
        }

        // 页面加载完成后的初始化
        document.addEventListener('DOMContentLoaded', function() {
            // 自动隐藏成功/错误消息
            setTimeout(() => {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(alert => {
                    if (alert.classList.contains('show')) {
                        alert.classList.remove('show');
                    }
                });
            }, 5000);
        });
    </script>
}

@Html.AntiForgeryToken()

<style>
    .glass-alert-success {
        background: rgba(25, 135, 84, 0.1);
        border: 1px solid rgba(25, 135, 84, 0.2);
        color: var(--text-primary);
    }

    .glass-alert-danger {
        background: rgba(220, 53, 69, 0.1);
        border: 1px solid rgba(220, 53, 69, 0.2);
        color: var(--text-primary);
    }

    .table th {
        border-color: var(--glass-border);
        background: var(--glass-secondary);
        color: var(--text-primary);
    }

    .table td {
        border-color: var(--glass-border);
        color: var(--text-primary);
    }

    .table-hover tbody tr:hover {
        background: var(--glass-secondary);
    }
</style>
