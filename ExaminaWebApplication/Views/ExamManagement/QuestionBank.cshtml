@{
    ViewData["Title"] = "试卷管理 - 题库管理";
}

<!-- 页面标题 -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-question-circle me-2"></i>题库管理
        </h1>
        <p class="text-muted mb-0">管理考试题目库</p>
    </div>
    <div>
        <button class="glass-btn glass-btn-primary" onclick="showCreateQuestionModal()">
            <i class="bi bi-plus"></i> 创建题目
        </button>
        <button class="glass-btn glass-btn-info" onclick="importQuestions()">
            <i class="bi bi-upload"></i> 导入题目
        </button>
    </div>
</div>

<!-- 功能开发中提示 -->
<div class="row">
    <div class="col-md-12">
        <div class="glass-card border-warning">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>功能开发中
                </h5>
            </div>
            <div class="card-body">
                <p class="mb-3">题库管理功能正在开发中，目前您可以通过以下方式管理题目：</p>
                
                <div class="row">
                    <div class="col-md-6">
                        <h6><i class="bi bi-check-circle text-success me-2"></i>当前可用功能</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <span class="glass-btn glass-btn-secondary btn-sm disabled">
                                    <i class="bi bi-table me-1"></i>Excel操作点（试卷级别配置）
                                </span>
                                <small class="text-muted d-block">现在在试卷管理中配置Excel操作点</small>
                            </li>
                            <li class="mb-2">
                                <a href="@Url.Action("ExamList", "ExamManagement")" class="glass-btn glass-btn-success btn-sm">
                                    <i class="bi bi-file-earmark-text me-1"></i>试卷题目管理
                                </a>
                                <small class="text-muted d-block">在试卷中创建和管理题目</small>
                            </li>
                            <li class="mb-2">
                                <button class="glass-btn glass-btn-info btn-sm" onclick="viewApiDocumentation()">
                                    <i class="bi bi-code me-1"></i>API接口调用
                                </button>
                                <small class="text-muted d-block">通过API直接管理题目</small>
                            </li>
                        </ul>
                    </div>
                    
                    <div class="col-md-6">
                        <h6><i class="bi bi-clock text-warning me-2"></i>计划开发功能</h6>
                        <ul class="list-unstyled">
                            <li class="mb-1"><i class="bi bi-circle text-muted me-2"></i>题目模板管理</li>
                            <li class="mb-1"><i class="bi bi-circle text-muted me-2"></i>题目分类标签</li>
                            <li class="mb-1"><i class="bi bi-circle text-muted me-2"></i>难度级别管理</li>
                            <li class="mb-1"><i class="bi bi-circle text-muted me-2"></i>题目批量导入</li>
                            <li class="mb-1"><i class="bi bi-circle text-muted me-2"></i>题目使用统计</li>
                            <li class="mb-1"><i class="bi bi-circle text-muted me-2"></i>题目质量评估</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 快速操作 -->
<div class="row mt-4">
    <div class="col-md-4">
        <div class="glass-card">
            <div class="card-body text-center">
                <i class="bi bi-table text-primary mb-3" style="font-size: 3rem;"></i>
                <h5>Excel题目</h5>
                <p class="text-muted">基于51个Excel操作点创建题目</p>
                <a href="@Url.Action("ExcelOperations", "ExamManagement")" class="glass-btn glass-btn-primary">
                    <i class="bi bi-arrow-right"></i> 管理Excel题目
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="glass-card">
            <div class="card-body text-center">
                <i class="bi bi-file-earmark-text text-success mb-3" style="font-size: 3rem;"></i>
                <h5>试卷题目</h5>
                <p class="text-muted">在具体试卷中创建和管理题目</p>
                <a href="@Url.Action("ExamList", "ExamManagement")" class="glass-btn glass-btn-success">
                    <i class="bi bi-arrow-right"></i> 管理试卷题目
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="glass-card">
            <div class="card-body text-center">
                <i class="bi bi-gear text-info mb-3" style="font-size: 3rem;"></i>
                <h5>系统设置</h5>
                <p class="text-muted">配置题目生成和管理参数</p>
                <a href="@Url.Action("Settings", "ExamManagement")" class="glass-btn glass-btn-info">
                    <i class="bi bi-arrow-right"></i> 系统设置
                </a>
            </div>
        </div>
    </div>
</div>

<!-- API示例 -->
<div class="row mt-4">
    <div class="col-md-12">
        <div class="glass-card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-code me-2"></i>API使用示例
                </h5>
            </div>
            <div class="card-body">
                <p class="text-muted">您可以通过以下API接口直接管理题目：</p>
                
                <div class="row">
                    <div class="col-md-6">
                        <h6>创建Excel题目</h6>
                        <pre class="bg-light p-3 rounded"><code>POST /api/ExamQuestion/excel-operation
{
  "examSubjectId": 1,
  "operationNumber": 1,
  "parameters": {
    "目标单元格": "A1",
    "填充内容": "测试内容"
  },
  "score": 10,
  "difficultyLevel": 1
}</code></pre>
                    </div>
                    
                    <div class="col-md-6">
                        <h6>获取题目列表</h6>
                        <pre class="bg-light p-3 rounded"><code>GET /api/ExamQuestion/subject/{subjectId}

响应示例：
[
  {
    "id": 1,
    "title": "Excel操作题目",
    "content": "请完成以下操作...",
    "score": 10,
    "difficultyLevel": 1
  }
]</code></pre>
                    </div>
                </div>
                
                <div class="mt-3">
                    <button class="glass-btn glass-btn-primary" onclick="testCreateQuestion()">
                        <i class="bi bi-play"></i> 测试创建题目
                    </button>
                    <button class="glass-btn glass-btn-info" onclick="viewApiDocumentation()">
                        <i class="bi bi-book"></i> 查看API文档
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 开发路线图 -->
<div class="row mt-4">
    <div class="col-md-12">
        <div class="glass-card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-map me-2"></i>开发路线图
                </h5>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="timeline-item completed">
                        <div class="timeline-marker bg-success"></div>
                        <div class="timeline-content">
                            <h6>阶段1：Excel操作点系统 <span class="badge bg-success">已完成</span></h6>
                            <p class="text-muted">51个Excel操作点的完整实现，支持参数配置和题目生成</p>
                        </div>
                    </div>
                    
                    <div class="timeline-item completed">
                        <div class="timeline-marker bg-success"></div>
                        <div class="timeline-content">
                            <h6>阶段2：试卷管理系统 <span class="badge bg-success">已完成</span></h6>
                            <p class="text-muted">完整的试卷创建、编辑、发布和管理功能</p>
                        </div>
                    </div>
                    
                    <div class="timeline-item current">
                        <div class="timeline-marker bg-warning"></div>
                        <div class="timeline-content">
                            <h6>阶段3：题库管理系统 <span class="badge bg-warning">开发中</span></h6>
                            <p class="text-muted">独立的题库管理，支持题目模板、分类、标签等功能</p>
                        </div>
                    </div>
                    
                    <div class="timeline-item">
                        <div class="timeline-marker bg-secondary"></div>
                        <div class="timeline-content">
                            <h6>阶段4：其他科目支持 <span class="badge bg-secondary">计划中</span></h6>
                            <p class="text-muted">PowerPoint、Word、Windows、C#等科目的操作点和题目支持</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 显示创建题目模态框
        function showCreateQuestionModal() {
            showNotification('题目创建功能开发中，请通过试卷管理或Excel操作点创建题目', 'info');
        }

        // 导入题目
        function importQuestions() {
            showNotification('题目导入功能开发中', 'info');
        }

        // 测试创建题目
        async function testCreateQuestion() {
            try {
                const response = await fetch('/api/ExamTest/test-excel-question-creation', {
                    method: 'POST'
                });
                
                if (response.ok) {
                    const data = await response.json();
                    showNotification('测试题目创建成功！', 'success');
                } else {
                    const error = await response.text();
                    showNotification(`测试失败: ${error}`, 'danger');
                }
            } catch (error) {
                console.error('测试创建题目失败:', error);
                showNotification('测试创建题目失败', 'danger');
            }
        }

        // 查看API文档
        function viewApiDocumentation() {
            const apiEndpoints = [
                '/api/ExamQuestion/excel-operation',
                '/api/ExamQuestion/subject/{subjectId}',
                '/api/ExamQuestion/{id}',
                '/api/ExcelTest/available-excel-operations',
                '/api/ExcelTest/statistics'
            ];
            
            let message = 'API端点列表：\n\n';
            apiEndpoints.forEach(endpoint => {
                message += `• ${endpoint}\n`;
            });
            
            alert(message);
        }
    </script>
    
    <style>
        .timeline {
            position: relative;
            padding-left: 30px;
        }
        
        .timeline::before {
            content: '';
            position: absolute;
            left: 15px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #dee2e6;
        }
        
        .timeline-item {
            position: relative;
            margin-bottom: 30px;
        }
        
        .timeline-marker {
            position: absolute;
            left: -22px;
            top: 5px;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            border: 2px solid #fff;
        }
        
        .timeline-content {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            border-left: 4px solid #dee2e6;
        }
        
        .timeline-item.completed .timeline-content {
            border-left-color: #28a745;
        }
        
        .timeline-item.current .timeline-content {
            border-left-color: #ffc107;
        }
    </style>
}
