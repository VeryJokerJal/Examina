@using ExaminaWebApplication.Models
@model ExaminaWebApplication.Models.Admin.Requests.CreateUserRequest
@{
    ViewData["Title"] = "创建用户";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0"><i class="bi bi-person-plus me-2"></i>创建用户</h4>
        <a href="/Admin/Organization" class="glass-btn"><i class="bi bi-arrow-left me-2"></i>返回组织管理</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["WarningMessage"] != null)
    {
        <div class="alert alert-warning">@TempData["WarningMessage"]</div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="glass-card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-ui-checks-grid me-2"></i>填写用户信息</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-controller="AdminUserWeb" method="post">
                        @Html.AntiForgeryToken()

                        <!-- 用户类型 -->
                        <div class="mb-3">
                            <label asp-for="Role" class="form-label"><i class="bi bi-person-badge me-1"></i>用户类型 <span class="text-danger">*</span></label>
                            <select asp-for="Role" class="form-select" id="Role">
                                <option value="@((int)UserRole.Student)">学生</option>
                                <option value="@((int)UserRole.Teacher)">教师</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                            <div class="form-text">选择不同用户类型将显示不同的字段与校验规则。</div>
                        </div>

                        <!-- 用户名 -->
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label"></label>
                            <input asp-for="Username" class="form-control glass-input" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <!-- 邮箱 -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control glass-input" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- 手机号（可选） -->
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control glass-input" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <!-- 姓名（可选） -->
                        <div class="mb-3">
                            <label asp-for="RealName" class="form-label"></label>
                            <input asp-for="RealName" class="form-control glass-input" />
                            <span asp-validation-for="RealName" class="text-danger"></span>
                        </div>

                        <!-- 学号/工号（可选） -->
                        <div class="mb-3">
                            <label asp-for="StudentId" class="form-label">学号/工号</label>
                            <input asp-for="StudentId" class="form-control glass-input" />
                            <span asp-validation-for="StudentId" class="text-danger"></span>
                        </div>

                        <!-- 密码/确认密码 -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" class="form-control glass-input" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label"></label>
                                <input asp-for="ConfirmPassword" class="form-control glass-input" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- 邀请码（学生可选，教师必填） -->
                        <div class="mb-3" id="invitationSection">
                            <label asp-for="InvitationCode" class="form-label"><i class="bi bi-key me-1"></i>邀请码</label>
                            <input asp-for="InvitationCode" class="form-control glass-input" id="InvitationCode" />
                            <span asp-validation-for="InvitationCode" class="text-danger"></span>
                            <div class="form-text" id="invitationHelp">学生可不填，教师必须填写且必须来自学校组织。</div>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="glass-btn glass-btn-primary"><i class="bi bi-check-circle me-2"></i>创建</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="glass-card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>说明</h6>
                </div>
                <div class="card-body small">
                    <p class="mb-2"><strong>学生账户：</strong>邀请码可选，填写后将自动加入对应组织。</p>
                    <p class="mb-2"><strong>教师账户：</strong>必须填写邀请码，且必须来自学校组织。</p>
                    <p class="text-muted mb-0">该页面仅管理员可访问。</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function updateInvitationRule() {
            const role = document.getElementById('Role').value;
            const help = document.getElementById('invitationHelp');
            const input = document.getElementById('InvitationCode');
            if (role == '@((int)UserRole.Teacher)') {
                help.innerText = '教师必须填写邀请码，且必须来自学校组织。';
                input.setAttribute('placeholder', '请输入7位学校组织邀请码');
            } else {
                help.innerText = '学生可不填；若填写则需有效。';
                input.setAttribute('placeholder', '可选：7位邀请码');
            }
        }
        document.getElementById('Role').addEventListener('change', updateInvitationRule);
        document.addEventListener('DOMContentLoaded', updateInvitationRule);
    </script>
}

