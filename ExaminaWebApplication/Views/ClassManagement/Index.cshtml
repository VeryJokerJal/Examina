@model ExaminaWebApplication.ViewModels.ClassManagementViewModel
@{
    ViewData["Title"] = "班级管理";
}

<div class="container-fluid">
    <!-- 页面标题 -->
    <div class="glass-card glass-card-primary mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col">
                    <h2 class="mb-0">
                        <i class="bi bi-people me-2"></i>班级管理
                    </h2>
                    <p class="text-muted mb-0">管理系统中的班级信息和邀请码</p>
                </div>
                <div class="col-auto">
                    <button type="button" class="glass-btn glass-btn-primary" data-bs-toggle="modal" data-bs-target="#createClassModal">
                        <i class="bi bi-plus-circle me-2"></i>创建班级
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- 搜索和筛选 -->
    <div class="glass-card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="glass-form-label">选择学校</label>
                    <select class="glass-form-control" id="schoolFilter">
                        <option value="">全部学校</option>
                        @foreach (var school in Model.Schools)
                        {
                            string selected = Model.SelectedSchool?.Id == school.Id ? "selected" : "";
                            <option value="@school.Id" selected="@selected">
                                @school.Name
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="glass-form-label">搜索班级</label>
                    <div class="glass-input-group">
                        <span class="glass-input-group-text">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="glass-form-control" id="searchKeyword" placeholder="搜索班级名称..." value="@Model.SearchKeyword">
                    </div>
                </div>
                <div class="col-md-2">
                    <label class="glass-form-label">&nbsp;</label>
                    <div class="glass-form-check">
                        <input class="glass-form-check-input" type="checkbox" id="includeInactive" @(Model.IncludeInactive ? "checked" : "")>
                        <label class="glass-form-check-label" for="includeInactive">
                            包含已停用
                        </label>
                    </div>
                </div>
                <div class="col-md-2">
                    <label class="glass-form-label">&nbsp;</label>
                    <button type="button" class="glass-btn glass-btn-secondary w-100" onclick="searchClasses()">
                        <i class="bi bi-search me-2"></i>搜索
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- 班级列表 -->
    <div class="glass-card">
        <div class="card-header glass-card-header">
            <h5 class="mb-0">
                <i class="bi bi-list-ul me-2"></i>班级列表
                <span class="badge glass-badge ms-2" id="classCount">@Model.FilteredClasses.Count</span>
            </h5>
        </div>
        <div class="card-body">
            <div id="classesContainer">
                @if (Model.FilteredClasses.Any())
                {
                    <div class="row g-3">
                        @foreach (var classOrg in Model.FilteredClasses)
                        {
                            <div class="col-md-6 col-lg-4">
                                <div class="glass-card glass-card-secondary h-100">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <div>
                                                <h6 class="card-title mb-1">@classOrg.Name</h6>
                                                <small class="text-muted">
                                                    <i class="bi bi-building me-1"></i>@classOrg.ParentOrganizationName
                                                </small>
                                            </div>
                                            <div class="dropdown">
                                                <button class="glass-btn glass-btn-sm" type="button" data-bs-toggle="dropdown">
                                                    <i class="bi bi-three-dots-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu glass-dropdown-menu">
                                                    <li><a class="dropdown-item glass-dropdown-item" href="#" onclick="editClass(@classOrg.Id)">
                                                        <i class="bi bi-pencil me-2"></i>编辑
                                                    </a></li>
                                                    <li><a class="dropdown-item glass-dropdown-item" href="#" onclick="viewInvitationCodes(@classOrg.Id)">
                                                        <i class="bi bi-qr-code me-2"></i>邀请码
                                                    </a></li>
                                                    <li><a class="dropdown-item glass-dropdown-item" href="#" onclick="viewClassMembers(@classOrg.Id)">
                                                        <i class="bi bi-people me-2"></i>成员管理
                                                    </a></li>
                                                    @if (classOrg.IsActive)
                                                    {
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li><a class="dropdown-item glass-dropdown-item text-danger" href="#" onclick="deactivateClass(@classOrg.Id)">
                                                            <i class="bi bi-x-circle me-2"></i>停用
                                                        </a></li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                        
                                        <div class="row g-2 mb-3">
                                            <div class="col-6">
                                                <div class="glass-stat-card">
                                                    <div class="glass-stat-number">@classOrg.StudentCount</div>
                                                    <div class="glass-stat-label">学生数量</div>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="glass-stat-card">
                                                    <div class="glass-stat-number">@classOrg.InvitationCodeCount</div>
                                                    <div class="glass-stat-label">邀请码数量</div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                <i class="bi bi-person me-1"></i>@classOrg.CreatorUsername
                                            </small>
                                            <span class="badge @(classOrg.IsActive ? "glass-badge-success" : "glass-badge-danger")">
                                                @(classOrg.IsActive ? "激活" : "已停用")
                                            </span>
                                        </div>
                                        
                                        <small class="text-muted d-block mt-1">
                                            <i class="bi bi-calendar me-1"></i>@classOrg.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                                        </small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-people display-1 text-muted"></i>
                        <h5 class="text-muted mt-3">暂无班级数据</h5>
                        <p class="text-muted">点击上方"创建班级"按钮添加第一个班级</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- 创建班级模态框 -->
<div class="modal fade" id="createClassModal" tabindex="-1" aria-labelledby="createClassModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content glass-modal">
            <div class="modal-header glass-modal-header">
                <h5 class="modal-title" id="createClassModalLabel">
                    <i class="bi bi-plus-circle me-2"></i>创建班级
                </h5>
                <button type="button" class="glass-btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <i class="bi bi-x"></i>
                </button>
            </div>
            <form id="createClassForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="className" class="glass-form-label">班级名称 <span class="text-danger">*</span></label>
                        <input type="text" class="glass-form-control" id="className" name="Name" required maxlength="100" placeholder="请输入班级名称">
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="mb-3">
                        <label for="classSchoolId" class="glass-form-label">所属学校 <span class="text-danger">*</span></label>
                        <select class="glass-form-control" id="classSchoolId" name="SchoolId" required>
                            <option value="">请选择学校</option>
                            @foreach (var school in Model.Schools)
                            {
                                <option value="@school.Id">@school.Name</option>
                            }
                        </select>
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="mb-3">
                        <div class="glass-form-check">
                            <input class="glass-form-check-input" type="checkbox" id="generateInvitationCode" name="GenerateInvitationCode" checked>
                            <label class="glass-form-check-label" for="generateInvitationCode">
                                自动生成邀请码
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer glass-modal-footer">
                    <button type="button" class="glass-btn glass-btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-2"></i>取消
                    </button>
                    <button type="submit" class="glass-btn glass-btn-primary">
                        <i class="bi bi-check-circle me-2"></i>创建
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- 编辑班级模态框 -->
<div class="modal fade" id="editClassModal" tabindex="-1" aria-labelledby="editClassModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content glass-modal">
            <div class="modal-header glass-modal-header">
                <h5 class="modal-title" id="editClassModalLabel">
                    <i class="bi bi-pencil me-2"></i>编辑班级
                </h5>
                <button type="button" class="glass-btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <i class="bi bi-x"></i>
                </button>
            </div>
            <form id="editClassForm">
                <input type="hidden" id="editClassId" name="Id">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="editClassName" class="glass-form-label">班级名称 <span class="text-danger">*</span></label>
                        <input type="text" class="glass-form-control" id="editClassName" name="Name" required maxlength="100" placeholder="请输入班级名称">
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="mb-3">
                        <label for="editClassSchoolId" class="glass-form-label">所属学校 <span class="text-danger">*</span></label>
                        <select class="glass-form-control" id="editClassSchoolId" name="SchoolId" required>
                            <option value="">请选择学校</option>
                            @foreach (var school in Model.Schools)
                            {
                                <option value="@school.Id">@school.Name</option>
                            }
                        </select>
                        <div class="invalid-feedback"></div>
                    </div>
                </div>
                <div class="modal-footer glass-modal-footer">
                    <button type="button" class="glass-btn glass-btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-2"></i>取消
                    </button>
                    <button type="submit" class="glass-btn glass-btn-primary">
                        <i class="bi bi-check-circle me-2"></i>保存
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- 邀请码管理模态框 -->
<div class="modal fade" id="invitationCodesModal" tabindex="-1" aria-labelledby="invitationCodesModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content glass-modal">
            <div class="modal-header glass-modal-header">
                <h5 class="modal-title" id="invitationCodesModalLabel">
                    <i class="bi bi-qr-code me-2"></i>邀请码管理
                </h5>
                <button type="button" class="glass-btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <i class="bi bi-x"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="mb-0">班级邀请码列表</h6>
                    <button type="button" class="glass-btn glass-btn-primary glass-btn-sm" onclick="createInvitationCode()">
                        <i class="bi bi-plus-circle me-2"></i>生成新邀请码
                    </button>
                </div>
                <div id="invitationCodesContainer">
                    <!-- 邀请码列表将通过JavaScript动态加载 -->
                </div>
            </div>
            <div class="modal-footer glass-modal-footer">
                <button type="button" class="glass-btn glass-btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-2"></i>关闭
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/class-management.js" asp-append-version="true"></script>
}
