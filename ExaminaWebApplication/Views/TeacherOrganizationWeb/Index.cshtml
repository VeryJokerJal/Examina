@model TeacherOrganizationViewModel
@using ExaminaWebApplication.ViewModels
@using ExaminaWebApplication.Models.Organization
@using ExaminaWebApplication.Models.Organization.Dto
@{
    ViewData["Title"] = "我的组织";
    Layout = "_Layout";
}

<!-- 页面标题 -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>
            <i class="bi bi-people me-2"></i>我的组织
        </h2>
        <p class="text-muted mb-0">管理您加入的学校组织</p>
    </div>
    <div>
        <a href="/Teacher/Organization/Join" class="glass-btn glass-btn-primary">
            <i class="bi bi-plus-circle me-2"></i>加入组织
        </a>
    </div>
</div>

<!-- 成功/错误消息 -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success glass-alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger glass-alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- 统计卡片 -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="glass-card">
            <div class="card-body text-center">
                <i class="bi bi-people text-primary" style="font-size: 2rem;"></i>
                <h4 class="mt-2 mb-0">@Model.JoinedOrganizations.Count</h4>
                <small class="text-muted">已加入组织</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="glass-card">
            <div class="card-body text-center">
                <i class="bi bi-mortarboard text-success" style="font-size: 2rem;"></i>
                <h4 class="mt-2 mb-0">@Model.AvailableSchoolOrganizations.Count</h4>
                <small class="text-muted">可加入学校</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="glass-card">
            <div class="card-body text-center">
                <i class="bi bi-calendar-check text-info" style="font-size: 2rem;"></i>
                <h4 class="mt-2 mb-0">
                    @(Model.JoinedOrganizations.Any() ? Model.JoinedOrganizations.Max(o => o.JoinedAt).ToString("MM-dd") : "-")
                </h4>
                <small class="text-muted">最近加入</small>
            </div>
        </div>
    </div>
</div>

<!-- 已加入的组织 -->
<div class="glass-card mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-check-circle me-2"></i>已加入的组织
        </h5>
    </div>
    <div class="card-body">
        @if (Model.JoinedOrganizations.Any())
        {
            <div class="row">
                @foreach (var org in Model.JoinedOrganizations)
                {
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="glass-card h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-start justify-content-between mb-2">
                                    <div class="flex-grow-1">
                                        <h6 class="card-title mb-1">
                                            <i class="bi bi-mortarboard me-1 text-success"></i>
                                            @org.OrganizationName
                                        </h6>
                                        <small class="text-muted">
                                            <i class="bi bi-calendar me-1"></i>
                                            @org.JoinedAt.ToString("yyyy-MM-dd") 加入
                                        </small>
                                    </div>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" 
                                                type="button" data-bs-toggle="dropdown">
                                            <i class="bi bi-three-dots"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end glass-dropdown-menu">
                                            <li>
                                                <a class="dropdown-item glass-dropdown-item" 
                                                   href="/Teacher/Organization/Details/@org.OrganizationId">
                                                    <i class="bi bi-eye me-2"></i>查看详情
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <a class="dropdown-item glass-dropdown-item text-danger" 
                                                   href="#" onclick="leaveOrganization(@org.OrganizationId, '@org.OrganizationName')">
                                                    <i class="bi bi-box-arrow-right me-2"></i>退出组织
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-key me-1"></i>
                                        邀请码：<code>@org.InvitationCode</code>
                                    </small>
                                </div>
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>已加入
                                    </span>
                                    <a href="/Teacher/Organization/Details/@org.OrganizationId" 
                                       class="glass-btn btn-sm">
                                        <i class="bi bi-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                <h6 class="text-muted mt-3">您还没有加入任何组织</h6>
                <p class="text-muted">使用邀请码加入学校组织，开始您的教学之旅</p>
                <a href="/Teacher/Organization/Join" class="glass-btn glass-btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>立即加入
                </a>
            </div>
        }
    </div>
</div>

<!-- 可加入的学校组织 -->
<div class="glass-card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-mortarboard me-2"></i>可加入的学校组织
        </h5>
    </div>
    <div class="card-body">
        @if (Model.AvailableSchoolOrganizations.Any())
        {
            <div class="row">
                @foreach (var school in Model.AvailableSchoolOrganizations)
                {
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="glass-card h-100">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="bi bi-mortarboard me-1 text-success"></i>
                                    @school.Name
                                </h6>
                                
                                @if (!string.IsNullOrEmpty(school.Description))
                                {
                                    <p class="card-text small text-muted mb-2">@school.Description</p>
                                }
                                
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-people me-1"></i>
                                        @school.StudentCount 名成员
                                    </small>
                                </div>
                                
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar me-1"></i>
                                        创建于 @school.CreatedAt.ToString("yyyy-MM-dd")
                                    </small>
                                </div>
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-success">学校组织</span>
                                    <a href="/Teacher/Organization/Join" class="glass-btn btn-sm">
                                        <i class="bi bi-plus-circle me-1"></i>加入
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <div class="text-center mt-3">
                <small class="text-muted">
                    <i class="bi bi-info-circle me-1"></i>
                    教师只能加入学校类型的组织，需要使用邀请码进行加入
                </small>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="bi bi-mortarboard text-muted" style="font-size: 3rem;"></i>
                <h6 class="text-muted mt-3">暂无可加入的学校组织</h6>
                <p class="text-muted">请联系管理员创建学校组织</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // 退出组织
        async function leaveOrganization(organizationId, organizationName) {
            if (confirm(`确定要退出组织"${organizationName}"吗？\n\n退出后您将无法访问该组织的相关功能。`)) {
                try {
                    const response = await fetch(`/Teacher/Organization/Leave/${organizationId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        }
                    });

                    if (response.ok) {
                        showNotification('已成功退出组织', 'success');
                        setTimeout(() => {
                            window.location.reload();
                        }, 1000);
                    } else {
                        showNotification('退出失败，请稍后重试', 'danger');
                    }
                } catch (error) {
                    console.error('退出组织失败:', error);
                    showNotification('退出失败，请稍后重试', 'danger');
                }
            }
        }

        // 页面加载完成后的初始化
        document.addEventListener('DOMContentLoaded', function() {
            // 自动隐藏成功/错误消息
            setTimeout(() => {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(alert => {
                    if (alert.classList.contains('show')) {
                        alert.classList.remove('show');
                    }
                });
            }, 5000);
        });
    </script>
}

@Html.AntiForgeryToken()

<style>
    .glass-alert-success {
        background: rgba(25, 135, 84, 0.1);
        border: 1px solid rgba(25, 135, 84, 0.2);
        color: var(--text-primary);
    }

    .glass-alert-danger {
        background: rgba(220, 53, 69, 0.1);
        border: 1px solid rgba(220, 53, 69, 0.2);
        color: var(--text-primary);
    }

    .glass-dropdown-menu {
        background: var(--glass-primary);
        border: 1px solid var(--glass-border);
    }

    .glass-dropdown-item {
        color: var(--text-primary);
    }

    .glass-dropdown-item:hover {
        background: var(--glass-secondary);
        color: var(--text-primary);
    }

    .dropdown-divider {
        border-color: var(--glass-border);
    }
</style>
